<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="truck_selection_wizard_form" model="ir.ui.view">
        <field name="name">truck.selection.wizard.form</field>
        <field name="model">truck.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Truck">
                <group>
                    <field name="picking_id" readonly="1"/>
                    <field name="truck_id" options="{'no_create': False, 'no_open': True}"/>
                </group>
                <footer>
                    <button string="Create Weighing" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
