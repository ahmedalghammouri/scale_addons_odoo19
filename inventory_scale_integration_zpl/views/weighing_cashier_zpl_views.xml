        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_cashier.truck_weighing_view_form_cashier"/>
        <field name="arch" type="xml">
            <button name="action_print_driver_ticket" position="after">
                <button name="action_print_zpl_ticket" string="ðŸ–¨ï¸ ZPL Ticket" type="object"
