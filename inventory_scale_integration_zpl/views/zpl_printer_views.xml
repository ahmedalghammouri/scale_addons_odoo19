<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ZPL Printer Form View -->
    <record id="zpl_printer_view_form" model="ir.ui.view">
        <field name="name">zpl.printer.view.form</field>
        <field name="model">zpl.printer</field>
        <field name="arch" type="xml">
            <form string="ZPL Printer">
                <header>
                    <button name="action_test_connection" string="Test Connection" type="object" class="oe_highlight" icon="fa-plug" invisible="not is_enabled"/>
                    <button name="action_enable" string="Enable" type="object" class="btn-success" icon="fa-power-off" invisible="is_enabled"/>
                    <button name="action_disable" string="Disable" type="object" class="btn-warning" icon="fa-ban" invisible="not is_enabled"/>
                </header>
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_print_jobs" type="object" class="oe_stat_button" icon="fa-print">
                        <field name="print_count" widget="statinfo" string="Print Jobs"/>
                    </button>
                </div>
                <sheet>
                    <widget name="web_ribbon" title="Disabled" bg_color="text-bg-danger" invisible="is_enabled"/>
                    <widget name="web_ribbon" title="Connected" bg_color="text-bg-success" invisible="connection_status != 'connected'"/>
                    <widget name="web_ribbon" title="Error" bg_color="text-bg-warning" invisible="connection_status != 'error'"/>
                    
                    <div class="oe_title">
                        <label for="name" string="Printer Name"/>
                        <h1><field name="name" placeholder="e.g. Zebra ZT230"/></h1>
                    </div>
                    
                    <group>
                        <group string="Connection">
                            <field name="connection_type" widget="radio"/>
                            <field name="ip_address" invisible="connection_type != 'network'" placeholder="192.168.1.100"/>
                            <field name="port" invisible="connection_type != 'network'"/>
                            <field name="usb_device" invisible="connection_type != 'usb'" placeholder="/dev/usb/lp0 or COM1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Status">
                            <field name="is_enabled" widget="boolean_toggle"/>
                            <field name="connection_status" widget="badge" decoration-success="connection_status=='connected'" decoration-danger="connection_status=='error'" decoration-warning="connection_status=='disconnected'"/>
                            <field name="last_check_date" widget="relative"/>
                        </group>
                    </group>
                    
                    <group string="Printer Settings">
                        <group>
                            <field name="dpi"/>
                            <field name="label_width"/>
                            <field name="label_height"/>
                        </group>
                        <group>
                            <field name="print_speed"/>
                            <field name="darkness"/>
                        </group>
                    </group>
                    
                    <group string="Auto-Print Settings">
                        <group>
                            <field name="auto_print_label"/>
                            <field name="auto_print_ticket"/>
                        </group>
                        <group>
                            <field name="auto_print_certificate"/>
                            <field name="support_arabic"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Assignments" name="assignments">
                            <group>
                                <field name="scale_ids" widget="many2many_tags"/>
                                <field name="user_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Error Log" name="errors" invisible="not error_message">
                            <field name="error_message" readonly="1"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional printer information..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ZPL Printer List View -->
    <record id="zpl_printer_view_list" model="ir.ui.view">
        <field name="name">zpl.printer.view.list</field>
        <field name="model">zpl.printer</field>
        <field name="arch" type="xml">
            <list string="ZPL Printers" decoration-success="connection_status=='connected'" decoration-danger="connection_status=='error'" decoration-muted="not is_enabled">
                <field name="name"/>
                <field name="connection_type"/>
                <field name="ip_address" optional="show"/>
                <field name="is_enabled" widget="boolean_toggle"/>
                <field name="connection_status" widget="badge" decoration-success="connection_status=='connected'" decoration-danger="connection_status=='error'" decoration-warning="connection_status=='disconnected'"/>
                <field name="print_count"/>
                <field name="last_check_date" widget="relative" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ZPL Printer Search View -->
    <record id="zpl_printer_view_search" model="ir.ui.view">
        <field name="name">zpl.printer.view.search</field>
        <field name="model">zpl.printer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="ip_address"/>
                <filter string="Enabled" name="enabled" domain="[('is_enabled', '=', True)]"/>
                <filter string="Disabled" name="disabled" domain="[('is_enabled', '=', False)]"/>
                <separator/>
                <filter string="Connected" name="connected" domain="[('connection_status', '=', 'connected')]"/>
                <filter string="Error" name="error" domain="[('connection_status', '=', 'error')]"/>
                <group>
                    <filter string="Connection Type" name="group_connection" domain="[]" context="{'group_by':'connection_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Print Job List View -->
    <record id="zpl_print_job_view_list" model="ir.ui.view">
        <field name="name">zpl.print.job.view.list</field>
        <field name="model">zpl.print.job</field>
        <field name="arch" type="xml">
            <list string="Print Jobs" decoration-success="state=='done'" decoration-danger="state=='failed'" decoration-info="state=='printing'">
                <field name="name"/>
                <field name="printer_id"/>
                <field name="weighing_id" optional="show"/>
                <field name="print_type" widget="badge"/>
                <field name="state" widget="badge" decoration-success="state=='done'" decoration-danger="state=='failed'" decoration-info="state=='printing'"/>
                <field name="print_date" widget="datetime" optional="show"/>
                <field name="user_id" optional="hide"/>
                <button name="action_print" string="Print" type="object" icon="fa-print" invisible="state != 'pending'"/>
                <button name="action_retry" string="Retry" type="object" icon="fa-redo" invisible="state != 'failed'"/>
            </list>
        </field>
    </record>

    <!-- Print Job Form View -->
    <record id="zpl_print_job_view_form" model="ir.ui.view">
        <field name="name">zpl.print.job.view.form</field>
        <field name="model">zpl.print.job</field>
        <field name="arch" type="xml">
            <form string="Print Job">
                <header>
                    <button name="action_print" string="Print" type="object" class="oe_highlight" invisible="state != 'pending'"/>
                    <button name="action_retry" string="Retry" type="object" class="btn-warning" invisible="state != 'failed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="printer_id"/>
                            <field name="weighing_id"/>
                            <field name="print_type"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="print_date"/>
                        </group>
                    </group>
                    <group string="ZPL Code">
                        <field name="zpl_code" widget="text" nolabel="1"/>
                    </group>
                    <group string="Error" invisible="not error_message">
                        <field name="error_message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_zpl_printer" model="ir.actions.act_window">
        <field name="name">ZPL Printers</field>
        <field name="res_model">zpl.printer</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_enabled': 1}</field>
    </record>

    <record id="action_zpl_print_job" model="ir.actions.act_window">
        <field name="name">Print Jobs</field>
        <field name="res_model">zpl.print.job</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
