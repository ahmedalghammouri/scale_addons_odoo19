<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="inventory_scale_integration_sale.SOCard" t-inherit="inventory_scale_integration.WeighingDashboardTemplate" t-inherit-mode="extension" owl="1">
        <xpath expr="//h5[contains(text(), 'Purchase Orders')]/ancestor::div[hasclass('col-lg-3')]" position="after">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-success h-100 shadow-sm">
                    <div class="card-header bg-success d-flex justify-content-between align-items-center">
                        <h5 class="m-2"><i class="fa fa-file-invoice-dollar m-2"/>Sale Orders</h5>
                        <span class="badge badge-light" style="font-size: 1.5rem;" t-esc="state.data.sale_orders?.count || 0"/>
                    </div>
                    <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                        <i class="fa fa-file-invoice-dollar" style="font-size: 3rem;"/>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <h3 class="text-success mb-0" style="cursor: pointer;" t-esc="this.formatWeight(state.data.sale_orders?.total_qty || 0)" t-on-click="() => this.onCardAction('sale_orders')"/>
                            <small class="text-muted">Expected Weight</small>
                        </div>
                        <hr/>
                        <div class="row text-center">
                            <div class="col-6">
                                <h5 class="text-danger mb-0" style="cursor: pointer;" t-esc="state.data.sale_orders?.urgent_count || 0" t-on-click="() => this.onCardAction('sale_urgent')"/>
                                <small class="text-muted">Urgent</small>
                            </div>
                            <div class="col-6">
                                <h5 class="text-info mb-0" style="cursor: pointer;" t-esc="state.data.sale_orders?.customers || 0" t-on-click="() => this.onCardAction('sale_by_customer')"/>
                                <small class="text-muted">Customers</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-success btn-sm btn-block" t-on-click="() => this.onCardAction('sale_orders')">
                            <i class="fa fa-list"/> View All SOs
                        </button>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
