<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_weighing_certificate_in" inherit_id="inventory_scale_integration_base.report_weighing_certificate">
        <xpath expr="//tr[@t-if='o.scale_id']" position="after">
            <tr t-if="o.picking_id">
                <td><strong>Receipt:</strong></td>
                <td colspan="3"><span t-field="o.picking_id"/></td>
            </tr>
            <tr t-if="o.source_document">
                <td><strong>Source Document:</strong></td>
                <td colspan="3"><span t-field="o.source_document"/></td>
            </tr>
        </xpath>
    </template>

    <template id="report_driver_ticket_in" inherit_id="inventory_scale_integration_base.report_driver_ticket">
        <xpath expr="//div[@style='margin: 12px 0; font-size: 11px; line-height: 1.8;']" position="inside">
            <div t-if="o.picking_id" style="margin: 5px 0; padding: 5px; background: #ecf0f1; border-radius: 3px;">
                <strong style="color: #2c3e50;">Receipt:</strong> <span t-esc="o.picking_id.name" style="font-weight: 600;"/>
            </div>
        </xpath>
    </template>
</odoo>
