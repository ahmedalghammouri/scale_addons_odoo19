<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="inventory_scale_integration_cashier.CashierInterface">
        <div class="weighing_cashier_interface">
            <!-- Header -->
            <div class="cashier_header">
                <h1>‚öñÔ∏è Weighing Cashier</h1>
                <button class="btn btn-primary btn-lg" t-on-click="() => this.createNewWeighing()">
                    ‚ûï New Weighing
                </button>
            </div>

            <!-- Search Bar -->
            <div class="barcode_section">
                <div class="barcode_input_group">
                    <label>üîç Search / Scan Barcode:</label>
                    <input type="text" 
                           class="form-control form-control-lg" 
                           placeholder="Search orders or scan barcode..."
                           t-model="state.searchText"
                           t-on-keydown="(ev) => ev.key === 'Enter' ? (state.barcode ? this.scanBarcode() : this.onSearch()) : null"
                           t-on-input="onSearchChange"
                           autofocus="autofocus"/>
                    <button class="btn btn-success btn-lg" t-on-click="() => this.onSearch()">
                        Search
                    </button>
                </div>
            </div>

            <div class="cashier_content">
                <!-- Pending Orders -->
                <div class="pending_orders_section">
                    <div class="section_header">
                        <h3>üìã Pending Orders</h3>
                        <div class="filter_buttons">
                            <button t-attf-class="btn btn-sm {{state.pickingFilter === 'all' ? 'btn-primary' : 'btn-outline-primary'}}" 
                                    t-on-click="() => this.onPickingFilterChange('all')">All</button>
                            <button t-attf-class="btn btn-sm {{state.pickingFilter === 'incoming' ? 'btn-primary' : 'btn-outline-primary'}}" 
                                    t-on-click="() => this.onPickingFilterChange('incoming')">Incoming</button>
                            <button t-attf-class="btn btn-sm {{state.pickingFilter === 'outgoing' ? 'btn-primary' : 'btn-outline-primary'}}" 
                                    t-on-click="() => this.onPickingFilterChange('outgoing')">Outgoing</button>
                        </div>
                    </div>
                    <div class="orders_list">
                        <t t-if="state.pickings.length === 0">
                            <div class="empty_state">No pending orders</div>
                        </t>
                        <t t-foreach="state.pickings" t-as="picking" t-key="picking.id">
                            <div class="order_card" t-on-click="() => this.createWeighingFromPicking(picking.id)">
                                <div class="order_header">
                                    <span class="order_name">
                                        <t t-if="picking.picking_type_code === 'incoming'">üì•</t>
                                        <t t-if="picking.picking_type_code === 'outgoing'">üì§</t>
                                        <t t-esc="picking.name"/>
                                    </span>
                                    <span t-attf-class="badge badge-{{picking.picking_type_code === 'incoming' ? 'primary' : 'warning'}}">
                                        <t t-esc="picking.picking_type_code"/>
                                    </span>
                                </div>
                                <div class="order_details">
                                    <div><strong>Partner:</strong> <t t-esc="picking.partner_id[1]"/></div>
                                    <div><strong>Scheduled:</strong> <t t-esc="picking.scheduled_date"/></div>
                                    <div t-if="picking.origin"><strong>Origin:</strong> <t t-esc="picking.origin"/></div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <!-- Weighings -->
                <div class="recent_weighings_section">
                    <div class="section_header">
                        <h3>‚è±Ô∏è Weighings</h3>
                        <div class="filter_buttons">
                            <button t-attf-class="btn btn-sm {{state.weighingFilter === 'in_progress' ? 'btn-primary' : 'btn-outline-primary'}}" 
                                    t-on-click="() => this.onWeighingFilterChange('in_progress')">In Progress</button>
                            <button t-attf-class="btn btn-sm {{state.weighingFilter === 'done' ? 'btn-primary' : 'btn-outline-primary'}}" 
                                    t-on-click="() => this.onWeighingFilterChange('done')">Done</button>
                            <button t-attf-class="btn btn-sm {{state.weighingFilter === 'all' ? 'btn-primary' : 'btn-outline-primary'}}" 
                                    t-on-click="() => this.onWeighingFilterChange('all')">All</button>
                        </div>
                    </div>
                    <div class="weighings_list">
                        <t t-if="state.weighingFilter !== 'done'">
                            <t t-if="state.recentWeighings.length === 0">
                                <div class="empty_state">No weighings in progress</div>
                            </t>
                            <t t-foreach="state.recentWeighings" t-as="weighing" t-key="weighing.id">
                                <div class="weighing_card" t-on-click="() => this.openWeighing(weighing.id)">
                                    <div class="weighing_header">
                                        <span class="weighing_name">
                                            <t t-if="weighing.operation_type === 'incoming'">üì•</t>
                                            <t t-if="weighing.operation_type === 'outgoing'">üì§</t>
                                            <t t-esc="weighing.name"/>
                                        </span>
                                        <span t-attf-class="badge badge-{{weighing.state === 'draft' ? 'secondary' : 'info'}}">
                                            <t t-esc="weighing.state"/>
                                        </span>
                                    </div>
                                    <div class="weighing_details">
                                        <div><strong>Truck:</strong> <t t-esc="weighing.truck_plate"/></div>
                                        <div t-if="weighing.partner_id"><strong>Partner:</strong> <t t-esc="weighing.partner_id[1]"/></div>
                                        <div t-if="weighing.product_id"><strong>Product:</strong> <t t-esc="weighing.product_id[1]"/></div>
                                        <div t-if="weighing.barcode"><strong>Barcode:</strong> <t t-esc="weighing.barcode"/></div>
                                    </div>
                                </div>
                            </t>
                        </t>
                        
                        <t t-if="state.weighingFilter !== 'in_progress'">
                            <t t-if="state.doneWeighings.length === 0">
                                <div class="empty_state">No completed weighings</div>
                            </t>
                            <t t-foreach="state.doneWeighings" t-as="weighing" t-key="weighing.id">
                                <div class="weighing_card done" t-on-click="() => this.openWeighing(weighing.id)">
                                    <div class="weighing_header">
                                        <span class="weighing_name">
                                            <t t-if="weighing.operation_type === 'incoming'">üì•</t>
                                            <t t-if="weighing.operation_type === 'outgoing'">üì§</t>
                                            <t t-esc="weighing.name"/>
                                        </span>
                                        <span class="badge badge-success">‚úì Done</span>
                                    </div>
                                    <div class="weighing_details">
                                        <div><strong>Truck:</strong> <t t-esc="weighing.truck_plate"/></div>
                                        <div t-if="weighing.partner_id"><strong>Partner:</strong> <t t-esc="weighing.partner_id[1]"/></div>
                                        <div t-if="weighing.product_id"><strong>Product:</strong> <t t-esc="weighing.product_id[1]"/></div>
                                        <div><strong>Net Weight:</strong> <t t-esc="weighing.net_weight"/> KG</div>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
