<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="inventory_scale_integration_base.WeighingDashboardTemplate" t-inherit="inventory_scale_integration_base.WeighingDashboardTemplate" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@id='operations-overview']//div[contains(@class, 'col-lg-3')]" position="after">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-warning h-100 shadow-sm">
                    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                        <h5 class="m-2"><i class="fa fa-truck m-2"/>Deliveries to Weigh</h5>
                        <span class="badge badge-dark" t-esc="state.data.deliveries_to_weigh?.count || 0"/>
                    </div>
                    <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                        <i class="fa fa-truck" style="font-size: 4rem;"/>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <h4 class="text-warning" style="cursor: pointer;" t-esc="state.data.deliveries_to_weigh?.count || 0" t-on-click="() => this.onCardAction('deliveries_to_weigh')"/>
                                <small class="text-muted">Deliveries</small>
                            </div>
                            <div class="col-6">
                                <h4 class="text-danger" style="cursor: pointer;" t-esc="state.data.deliveries_to_weigh?.urgent_count || 0" t-on-click="() => this.onCardAction('deliveries_urgent')"/>
                                <small class="text-muted">Urgent</small>
                            </div>
                        </div>
                        <hr/>
                        <div class="row text-center">
                            <div class="col-6">
                                <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.deliveries_to_weigh?.total_qty || 0)" t-on-click="() => this.onCardAction('deliveries_to_weigh')"/>
                                <br/><small class="text-muted">Total Qty</small>
                            </div>
                            <div class="col-6">
                                <strong style="cursor: pointer;" t-esc="state.data.deliveries_to_weigh?.partners || 0" t-on-click="() => this.onCardAction('deliveries_by_customer')"/>
                                <br/><small class="text-muted">Customers</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100">
                            <button class="btn btn-warning btn-sm" t-on-click="() => this.onCardAction('deliveries_to_weigh')">
                                <i class="fa fa-eye"/> View All
                            </button>
                            <button class="btn btn-outline-warning btn-sm" t-on-click="() => this.onCardAction('new_weighing_delivery')">
                                <i class="fa fa-plus"/> New
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-success h-100 shadow-sm">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="m-2"><i class="fa fa-shopping-bag m-2"/>Sales to Weigh</h5>
                        <span class="badge badge-light" t-esc="state.data.sales_to_weigh?.count || 0"/>
                    </div>
                    <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                        <i class="fa fa-shopping-bag" style="font-size: 4rem;"/>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <h4 class="text-success" style="cursor: pointer;" t-esc="state.data.sales_to_weigh?.count || 0" t-on-click="() => this.onCardAction('sales_to_weigh')"/>
                                <small class="text-muted">Sales Orders</small>
                            </div>
                            <div class="col-6">
                                <h4 class="text-info" style="cursor: pointer;" t-esc="(state.data.sales_to_weigh?.total_amount || 0).toLocaleString()" t-on-click="() => this.onCardAction('sales_by_amount')"/>
                                <small class="text-muted">Total Value</small>
                            </div>
                        </div>
                        <hr/>
                        <div class="row text-center">
                            <div class="col-6">
                                <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.sales_to_weigh?.pending_qty || 0)" t-on-click="() => this.onCardAction('sales_pending_qty')"/>
                                <br/><small class="text-muted">Pending Qty</small>
                            </div>
                            <div class="col-6">
                                <strong style="cursor: pointer;" t-esc="state.data.sales_to_weigh?.partners || 0" t-on-click="() => this.onCardAction('sales_by_customer')"/>
                                <br/><small class="text-muted">Customers</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100">
                            <button class="btn btn-success btn-sm" t-on-click="() => this.onCardAction('sales_to_weigh')">
                                <i class="fa fa-eye"/> View All
                            </button>
                            <button class="btn btn-outline-success btn-sm" t-on-click="() => this.onCardAction('new_weighing_sale')">
                                <i class="fa fa-plus"/> New
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>