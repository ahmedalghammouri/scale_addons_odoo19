<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View Extension -->
    <record id="view_order_form_weighing" model="ir.ui.view">
        <field name="name">sale.order.form.weighing</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_weighing_records" type="object" class="oe_stat_button" icon="fa-balance-scale" invisible="not has_weighable_products">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="weighing_count"/></span>
                        <span class="o_stat_text">Weighing</span>
                    </div>
                    <div class="o_field_widget o_stat_info" style="margin-top: 5px;">
                        <span class="o_stat_value" style="font-size: 14px; color: #00aa00;"><field name="total_net_weight_display"/></span>
                        <span class="o_stat_text" style="font-size: 11px;">Total Delivered</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Actions for Sales Orders -->
    <record id="action_sales_need_weighing" model="ir.actions.act_window">
        <field name="name">Sales Orders to Weigh</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('order_line.product_id.is_weighable', '=', True), ('state', 'in', ['sale', 'done'])]</field>
        <field name="context">{'create': False}</field>
    </record>

    <record id="action_deliveries_need_weighing" model="ir.actions.act_window">
        <field name="name">Deliveries to Weigh</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('picking_type_code', '=', 'outgoing'), ('move_ids.product_id.is_weighable', '=', True)]</field>
        <field name="context">{'create': False}</field>
    </record>
</odoo>