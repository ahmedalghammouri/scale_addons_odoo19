<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock-related actions for sales extension -->
    <record id="action_deliveries_need_weighing" model="ir.actions.act_window">
        <field name="name">Deliveries Need Weighing</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('picking_type_code', '=', 'outgoing'), ('state', 'in', ['assigned', 'confirmed']), ('move_ids.product_id.is_weighable', '=', True)]</field>
        <field name="context">{}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_deliveries_need_weighing" name="Deliveries to Weigh" parent="inventory_scale_integration_base.menu_truck_weighing_operations" action="action_deliveries_need_weighing" sequence="2"/>
</odoo>