<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_sales_need_weighing" model="ir.actions.act_window">
        <field name="name">Sales Orders to Weigh</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('order_line.product_id.is_weighable', '=', True), ('state', 'in', ['sale', 'done'])]</field>
        <field name="context">{'create': False}</field>
    </record>

    <record id="action_deliveries_need_weighing" model="ir.actions.act_window">
        <field name="name">Deliveries to Weigh</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('picking_type_code', '=', 'outgoing'), ('move_ids.product_id.is_weighable', '=', True)]</field>
        <field name="context">{'create': False}</field>
    </record>

    <menuitem id="menu_sales_need_weighing" name="Sales to Weigh" parent="inventory_scale_integration_stock_out.menu_weighing_outgoing_root" action="action_sales_need_weighing" sequence="4"/>
</odoo>
