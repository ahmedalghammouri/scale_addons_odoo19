<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="truck_weighing_view_form_sale" model="ir.ui.view">
        <field name="name">truck.weighing.view.form.sale</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_stock.truck_weighing_view_form_stock"/>
        <field name="arch" type="xml">
            <field name="picking_id" position="attributes">
                <attribute name="invisible">operation_type == 'outgoing'</attribute>
            </field>
            <group name="partner_operation" position="after">
                <group string="Sale Order" invisible="operation_type != 'outgoing'">
                    <group>
                        <field name="sale_order_id" domain="[('partner_id', '=', partner_id), ('state', 'in', ['sale', 'done']), ('order_line.product_id.is_weighable', '=', True)]" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="sale_line_id" domain="[('order_id', '=', sale_order_id), ('product_id.is_weighable', '=', True)]" options="{'no_create': True}" invisible="not sale_order_id"/>
                    </group>
                </group>
            </group>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_sale_order" type="object" class="oe_stat_button" icon="fa-shopping-bag"
                        invisible="not sale_order_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Sale Order</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
