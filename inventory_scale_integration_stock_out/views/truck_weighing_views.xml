<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="truck_weighing_view_form_stock_out" model="ir.ui.view">
        <field name="name">truck.weighing.view.form.stock.out</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_form"/>
        <field name="arch" type="xml">
            <field name="operation_type" position="attributes">
                <attribute name="readonly">delivery_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="readonly">delivery_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            <field name="product_id" position="attributes">
                <attribute name="readonly">delivery_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            <xpath expr="//group[@name='partner_operation']" position="after">
                <group name="stock_operations_out" string="Stock Operations" invisible="operation_type != 'outgoing'">
                    <group>
                        <field name="delivery_id" domain="[('partner_id', '=', partner_id), ('picking_type_code', '=', 'outgoing'), ('state', 'in', ['draft', 'waiting', 'confirmed', 'assigned']), ('move_ids.product_id.is_weighable', '=', True)]" invisible="operation_type != 'outgoing'"/>
                        <field name="picking_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="location_id" readonly="delivery_id" force_save="1" invisible="operation_type != 'outgoing'"/>
                    </group>
                </group>
                <group name="transfer_info_out" string="Transfer Information" invisible="not delivery_id or operation_type != 'outgoing'">
                    <group>
                        <field name="source_document_out" readonly="1" invisible="operation_type != 'outgoing'"/>
                        <field name="scheduled_date_out" readonly="1" invisible="operation_type != 'outgoing'"/>
                    </group>
                    <group>
                        <label for="demand_qty_out" string="Demand Quantity" invisible="operation_type != 'outgoing'"/>
                        <div invisible="operation_type != 'outgoing'">
                            <field name="demand_qty_out" readonly="1" style="display: inline-block;"/> 
                            <field name="product_uom_out" readonly="1" nolabel="1" style="display: inline-block; margin-left: 5px;"/>
                        </div>
                    </group>
                </group>
            </xpath>
            <field name="notes" position="before">
                <div class="alert alert-info" role="alert" invisible="not delivery_id or state == 'draft' or operation_type != 'outgoing'" style="margin-bottom: 10px;">
                    <strong>Visual Indicators:</strong>
                    <ul style="margin-bottom: 0; padding-left: 20px;">
                        <li><strong>Remaining Qty:</strong> <span style="color: #d9534f;">Red</span> if positive (under-delivery), <span style="color: #5cb85c;">Green</span> if zero/negative (fulfilled/over-delivered)</li>
                        <li><strong>Variance:</strong> <span style="color: #5cb85c;">Green</span> if positive/zero (met or exceeded), <span style="color: #f0ad4e;">Orange</span> if negative (short)</li>
                        <li><strong>Variance %:</strong> <span style="color: #5cb85c;">Green</span> if within ±5%, <span style="color: #f0ad4e;">Orange</span> if outside that range</li>
                        <li><strong>Fulfillment %:</strong> <span style="color: #5cb85c;">Green</span> if ≥95%, <span style="color: #f0ad4e;">Orange</span> if 90-95%, <span style="color: #d9534f;">Red</span> if &lt;90%</li>
                    </ul>
                </div>
                <group string="Quantity Analysis" invisible="not delivery_id or state == 'draft' or operation_type != 'outgoing'">
                    <group>
                        <label for="remaining_qty_out" string="Remaining Quantity"/>
                        <div>
                            <field name="remaining_qty_out" readonly="1" decoration-danger="remaining_qty_out &gt; 0" decoration-success="remaining_qty_out &lt;= 0" style="font-size: 14px; font-weight: 500; display: inline-block;"/> 
                            <span style="font-size: 13px; color: #6c757d; margin-left: 5px;">KG</span>
                        </div>
                        <label for="variance_qty_out" string="Variance"/>
                        <div>
                            <field name="variance_qty_out" readonly="1" decoration-success="variance_qty_out &gt;= 0" decoration-warning="variance_qty_out &lt; 0" style="font-size: 14px; font-weight: 500; display: inline-block;"/> 
                            <span style="font-size: 13px; color: #6c757d; margin-left: 5px;">KG</span>
                        </div>
                        <field name="variance_percent_out" readonly="1" widget="percentage" decoration-success="variance_percent_out &gt;= -0.05 and variance_percent_out &lt;= 0.05" decoration-warning="variance_percent_out &lt; -0.05 or variance_percent_out &gt; 0.05" style="font-size: 14px; font-weight: 500;"/>
                        <field name="fulfillment_percent_out" readonly="1" widget="percentage" decoration-success="fulfillment_percent_out &gt;= 0.95" decoration-warning="fulfillment_percent_out &lt; 0.95 and fulfillment_percent_out &gt;= 0.90" decoration-danger="fulfillment_percent_out &lt; 0.90" style="font-size: 14px; font-weight: 500;"/>
                    </group>
                </group>
            </field>

            <xpath expr="//div[hasclass('oe_title')]" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_delivery" type="object" class="oe_stat_button" icon="fa-truck"
                            invisible="not delivery_id or operation_type != 'outgoing'">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Delivery</span>
                        </div>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

    <record id="truck_weighing_view_list_stock_out" model="ir.ui.view">
        <field name="name">truck.weighing.view.list.stock.out</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_list"/>
        <field name="arch" type="xml">
            <field name="operation_type" position="after">
                <field name="delivery_id" optional="show" decoration-info="delivery_id"/>
                <field name="source_document_out" optional="hide"/>
                <field name="demand_qty_out" optional="hide" widget="float"/>
                <field name="variance_qty_out" optional="hide" widget="float" decoration-success="variance_qty_out &gt;= 0" decoration-warning="variance_qty_out &lt; 0"/>
                <field name="fulfillment_percent_out" optional="hide" widget="percentage" decoration-success="fulfillment_percent_out &gt;= 0.95" decoration-warning="fulfillment_percent_out &lt; 0.95 and fulfillment_percent_out &gt;= 0.90" decoration-danger="fulfillment_percent_out &lt; 0.90"/>
                <field name="location_id" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="truck_weighing_view_search_stock_out" model="ir.ui.view">
        <field name="name">truck.weighing.view.search.stock.out</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_search"/>
        <field name="arch" type="xml">
            <field name="scale_id" position="after">
                <field name="delivery_id"/>
                <field name="location_id"/>
            </field>
            <filter name="done" position="after">
                <filter string="Outgoing" name="outgoing" domain="[('operation_type', '=', 'outgoing')]"/>
                <separator/>
                <filter string="With Delivery" name="with_delivery" domain="[('delivery_id', '!=', False)]"/>
            </filter>
            <filter name="group_month" position="after">
                <filter string="Delivery" name="group_delivery" domain="[]" context="{'group_by':'delivery_id'}"/>
                <filter string="Source Location" name="group_location" domain="[]" context="{'group_by':'location_id'}"/>
            </filter>
        </field>
    </record>

    <record id="truck_weighing_view_kanban_stock_out" model="ir.ui.view">
        <field name="name">truck.weighing.view.kanban.stock.out</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="delivery_id"/>
                <field name="source_document_out"/>
                <field name="demand_qty_out"/>
                <field name="variance_qty_out"/>
            </xpath>
            <xpath expr="//div[hasclass('mb-2')][last()]" position="after">
                <div t-if="record.delivery_id.raw_value" class="mb-2 p-2 border rounded">
                    <div class="mb-1"><i class="fa fa-file-text-o text-primary" title="Source"/> <strong><t t-out="record.source_document_out.value"/></strong></div>
                    <div class="row" t-if="record.demand_qty_out.raw_value &gt; 0">
                        <div class="col-6 small"><span class="text-muted">Demand:</span> <strong><t t-out="record.demand_qty_out.value"/> KG</strong></div>
                        <div class="col-6 small text-end">
                            <span t-att-class="'badge ' + (record.variance_qty_out.raw_value &gt;= 0 ? 'badge-success' : 'badge-warning')">
                                <t t-if="record.variance_qty_out.raw_value &gt;= 0">+</t><t t-out="record.variance_qty_out.value"/> KG
                            </span>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="truck_weighing_view_graph_stock_out" model="ir.ui.view">
        <field name="name">truck.weighing.view.graph.stock.out</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_graph"/>
        <field name="arch" type="xml">
            <field name="weighing_date" position="before">
                <field name="operation_type"/>
            </field>
        </field>
    </record>

    <record id="truck_weighing_view_pivot_stock_out" model="ir.ui.view">
        <field name="name">truck.weighing.view.pivot.stock.out</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_pivot"/>
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="operation_type" type="col"/>
            </field>
        </field>
    </record>
</odoo>
