<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_deliveries_need_weighing" model="ir.actions.act_window">
        <field name="name">Deliveries Need Weighing</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('picking_type_code', '=', 'outgoing'), ('state', 'in', ['assigned', 'confirmed']), ('move_ids.product_id.is_weighable', '=', True)]</field>
        <field name="context">{}</field>
    </record>

    <record id="action_truck_weighing_outgoing" model="ir.actions.act_window">
        <field name="name">Outgoing Weighing</field>
        <field name="res_model">truck.weighing</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('operation_type', '=', 'outgoing')]</field>
        <field name="context">{'default_operation_type': 'outgoing'}</field>
    </record>

    <record id="action_truck_weighing_outgoing_progress" model="ir.actions.act_window">
        <field name="name">In Progress (Outgoing)</field>
        <field name="res_model">truck.weighing</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', 'in', ['draft', 'first', 'second']), ('operation_type', '=', 'outgoing')]</field>
        <field name="context">{'default_operation_type': 'outgoing'}</field>
    </record>

    <menuitem id="menu_weighing_outgoing_root" name="Outgoing Weighing" parent="inventory_scale_integration_base.menu_truck_weighing_root" sequence="20"/>
    <menuitem id="menu_deliveries_need_weighing" name="Deliveries to Weigh" parent="menu_weighing_outgoing_root" action="action_deliveries_need_weighing" sequence="1"/>
    <menuitem id="menu_truck_weighing_outgoing_progress" name="In Progress" parent="menu_weighing_outgoing_root" action="action_truck_weighing_outgoing_progress" sequence="2"/>
    <menuitem id="menu_truck_weighing_outgoing" name="All Outgoing Records" parent="menu_weighing_outgoing_root" action="action_truck_weighing_outgoing" sequence="3"/>
    <menuitem id="menu_weighing_overview_out" name="Outgoing Overview" parent="menu_weighing_outgoing_root" action="action_weighing_overview_dashboard_out" sequence="4"/>
</odoo>
