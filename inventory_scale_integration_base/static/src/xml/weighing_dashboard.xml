<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="inventory_scale_integration_base.WeighingDashboardTemplate" owl="1">
        <div class="o_weighing_dashboard">
            <div class="container-fluid" t-if="!state.loading">
                <div class="row mb-4">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="text-primary"><i class="fa fa-exchange-alt m-2"/>Weighing Operations Overview</h4>
                            <p class="text-muted m-2">Real-time monitoring of your weighbridge operations</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="text-muted mr-3">Real-time monitoring dashboard</span>
                            <button class="btn btn-primary btn-sm" t-on-click="refreshData">
                                <i class="fa fa-sync-alt mr-1"/>Refresh
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Operations Section -->
                <div class="row mb-4" id="operations-overview">
                    <div class="col-12">
                        <!-- <div class="section-header mb-3">
                            <h4 class="text-primary"><i class="fa fa-exchange-alt m-2"/>Operations Overview</h4>
                            <p class="text-muted mb-0">Weighing operations management</p>
                        </div> -->
                    </div>
                </div>

                <!-- Weighing Records Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="section-header mb-3">
                            <h4 class="text-secondary"><i class="fa fa-balance-scale m-2"/>Weighing Records</h4>
                            <p class="text-muted mb-0">Current weighing status and historical records</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 mb-4">
                        <div class="card border-secondary h-100 shadow-sm">
                            <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                                <h5 class="m-2"><i class="fa fa-clock-o m-2"/>In Progress</h5>
                                <span class="badge badge-light" t-esc="state.data.in_progress?.count || 0"/>
                            </div>
                            <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                                <i class="fa fa-clock-o" style="font-size: 4rem;"/>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <h5 class="text-secondary" style="cursor: pointer;" t-esc="state.data.in_progress?.draft_count || 0" t-on-click="() => this.onCardAction('weighing_draft')"/>
                                        <small class="text-muted">Draft</small>
                                    </div>
                                    <div class="col-4">
                                        <h5 class="text-primary" style="cursor: pointer;" t-esc="state.data.in_progress?.gross_count || 0" t-on-click="() => this.onCardAction('weighing_gross')"/>
                                        <small class="text-muted">Gross</small>
                                    </div>
                                    <div class="col-4">
                                        <h5 class="text-warning" style="cursor: pointer;" t-esc="state.data.in_progress?.tare_count || 0" t-on-click="() => this.onCardAction('weighing_tare')"/>
                                        <small class="text-muted">Tare</small>
                                    </div>
                                </div>
                                <hr/>
                                <div class="text-center">
                                    <strong style="cursor: pointer;" t-esc="state.data.in_progress?.avg_time || 0" t-on-click="() => this.onCardAction('in_progress')"/> hours
                                    <br/><small class="text-muted">Avg. Processing Time</small>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100">
                                    <button class="btn btn-secondary btn-sm" t-on-click="() => this.onCardAction('in_progress')">
                                        <i class="fa fa-eye"/> View All
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm" t-on-click="() => this.onCardAction('new_weighing')">
                                        <i class="fa fa-plus"/> New
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 mb-4">
                        <div class="card border-dark h-100 shadow-sm">
                            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                                <h5 class="m-2"><i class="fa fa-list m-2"/>All Records</h5>
                                <span class="badge badge-light" t-esc="state.data.all_records?.total_count || 0"/>
                            </div>
                            <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                                <i class="fa fa-list" style="font-size: 4rem;"/>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <h4 class="text-info" style="cursor: pointer;" t-esc="state.data.all_records?.completed_today || 0" t-on-click="() => this.onCardAction('completed_today')"/>
                                        <small class="text-muted">Today</small>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-success" style="cursor: pointer;" t-esc="state.data.all_records?.completed_week || 0" t-on-click="() => this.onCardAction('completed_week')"/>
                                        <small class="text-muted">This Week</small>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row text-center">
                                    <div class="col-6">
                                        <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.all_records?.total_weight_today || 0)" t-on-click="() => this.onCardAction('completed_today')"/>
                                        <br/><small class="text-muted">Today's Weight</small>
                                    </div>
                                    <div class="col-6">
                                        <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.all_records?.avg_weight || 0)" t-on-click="() => this.onCardAction('all_records')"/>
                                        <br/><small class="text-muted">Avg. Weight</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100">
                                    <button class="btn btn-dark btn-sm" t-on-click="() => this.onCardAction('all_records')">
                                        <i class="fa fa-eye"/> View All
                                    </button>
                                    <button class="btn btn-outline-dark btn-sm" t-on-click="() => this.onCardAction('reports')">
                                        <i class="fa fa-chart-bar"/> Reports
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Truck Management Card - Full Row -->
                <div class="row mt-4">
                    <div class="col-12 truck-management-card">
                        <div class="card shadow-lg border-0">
                            <div class="card-header bg-gradient-primary text-white">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h5 class="mb-1"><i class="fa fa-truck m-2"/>Fleet Management Center</h5>
                                        <small class="opacity-75">Comprehensive truck fleet monitoring and analytics</small>
                                    </div>
                                    <div class="col-md-4 text-right">
                                        <div class="d-flex justify-content-end align-items-center">
                                            <span class="badge badge-light m-2" t-esc="state.data.truck_management?.total_trucks || 0"/>
                                            <small>Total Fleet</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <!-- Fleet Overview Row -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-muted mb-3"><i class="fa fa-tachometer mr-1"/>Fleet Overview</h6>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('all_trucks')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-primary text-white mr-3">
                                                    <i class="fa fa-truck"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-primary" t-esc="state.data.truck_management?.total_trucks || 0"/>
                                                    <small class="text-muted ">Total Trucks</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('active_trucks')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-success text-white mr-3">
                                                    <i class="fa fa-check-circle"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-success" t-esc="state.data.truck_management?.active_trucks || 0"/>
                                                    <small class="text-muted">Active Fleet</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('trucks_today')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-warning text-white mr-3">
                                                    <i class="fa fa-calendar-day"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-warning" t-esc="state.data.truck_management?.trucks_today || 0"/>
                                                    <small class="text-muted">Active Today</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('truck_utilization')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-info text-white mr-3">
                                                    <i class="fa fa-percentage"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-info" t-esc="(state.data.truck_management?.utilization_rate || 0) + '%'"/>
                                                    <small class="text-muted">Utilization</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('weekly_truck_activity')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-purple text-white mr-3">
                                                    <i class="fa fa-chart-line"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-purple" t-esc="state.data.truck_management?.weekly_activity || 0"/>
                                                    <small class="text-muted">Week Activity</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light">
                                            <button class="btn btn-primary btn-sm w-100" t-on-click="() => this.onCardAction('new_truck')">
                                                <i class="fa fa-plus mr-1"/> Add Truck
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Operations Summary Row -->
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="text-muted mb-3"><i class="fa fa-chart-bar mr-1"/>Operations Summary</h6>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="summary-card border-left-primary" style="cursor: pointer;" t-on-click="() => this.onCardAction('truck_weighings')">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5 class="text-primary m-2" t-esc="state.data.truck_management?.total_weighings || 0"/>
                                                    <small class="text-muted">Total Weighings</small>
                                                </div>
                                                <i class="fa fa-balance-scale text-primary fa-2x opacity-25"/>
                                            </div>
                                            <div class="mt-2">
                                                <small class="text-success">Avg: <span t-esc="state.data.truck_management?.avg_weighings_per_truck || 0"/> per truck</small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="summary-card border-left-warning" style="cursor: pointer;" t-on-click="() => this.onCardAction('truck_receipts')">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5 class="text-warning m-2" t-esc="state.data.truck_management?.truck_receipts || 0"/>
                                                    <small class="text-muted">Related Receipts</small>
                                                </div>
                                                <i class="fa fa-inbox text-warning fa-2x opacity-25"/>
                                            </div>
                                            <div class="mt-2">
                                                <small class="text-muted">Incoming receipts for weighing</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="summary-card border-left-success" style="cursor: pointer;" t-on-click="() => this.onCardAction('truck_efficiency')">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5 class="text-success m-2" t-esc="state.data.truck_management?.efficiency_score || 0"/>
                                                    <small class="text-muted">Efficiency Score</small>
                                                </div>
                                                <i class="fa fa-trophy text-success fa-2x opacity-25"/>
                                            </div>
                                            <div class="mt-2">
                                                <small class="text-muted">Weekly weighings per active truck</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions Card -->
                <div class="row mt-4 mb-5">
                    <div class="col-12">
                        <div class="card shadow-sm border-0 quick-actions-card">
                            <div class="card-header bg-gradient-secondary text-white">
                                <div class="row align-items-center">
                                    <div class="col-12">
                                        <h5 class="mb-1"><i class="fa fa-bolt m-2"/>Quick Actions Center</h5>
                                        <small class="opacity-75">Essential operations at your fingertips</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="action-card primary" t-on-click="() => this.onCardAction('new_weighing')">
                                            <div class="action-icon">
                                                <i class="fa fa-plus"/>
                                            </div>
                                            <div class="action-content">
                                                <h6 class="action-title">New Weighing</h6>
                                                <p class="action-description">Start a new weighing process</p>
                                                <div class="action-arrow">
                                                    <i class="fa fa-arrow-right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="action-card info" t-on-click="() => this.onCardAction('truck_fleet')">
                                            <div class="action-icon">
                                                <i class="fa fa-truck"/>
                                            </div>
                                            <div class="action-content">
                                                <h6 class="action-title">Truck Fleet</h6>
                                                <p class="action-description">Manage your truck fleet</p>
                                                <div class="action-arrow">
                                                    <i class="fa fa-arrow-right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="action-card warning" t-on-click="() => this.onCardAction('scale_settings')">
                                            <div class="action-icon">
                                                <i class="fa fa-cog"/>
                                            </div>
                                            <div class="action-content">
                                                <h6 class="action-title">Scale Settings</h6>
                                                <p class="action-description">Configure weighing scales</p>
                                                <div class="action-arrow">
                                                    <i class="fa fa-arrow-right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="action-card success" t-on-click="() => this.onCardAction('reports')">
                                            <div class="action-icon">
                                                <i class="fa fa-chart-line"/>
                                            </div>
                                            <div class="action-content">
                                                <h6 class="action-title">Reports</h6>
                                                <p class="action-description">View analytics and reports</p>
                                                <div class="action-arrow">
                                                    <i class="fa fa-arrow-right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loading State -->
            <div class="text-center p-5" t-if="state.loading">
                <i class="fa fa-spinner fa-spin fa-3x text-muted"/>
                <p class="mt-3 text-muted">Loading dashboard data...</p>
            </div>
        </div>
    </t>
</templates>