<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paper Formats -->
    <record id="paperformat_label" model="report.paperformat">
        <field name="name">Label Format (A5 Landscape)</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">148</field>
        <field name="page_width">210</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">90</field>
    </record>

    <record id="paperformat_ticket" model="report.paperformat">
        <field name="name">Ticket Format (80mm Thermal)</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">200</field>
        <field name="page_width">80</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="paperformat_driver_ticket" model="report.paperformat">
        <field name="name">Driver Ticket (A6 Portrait)</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">148</field>
        <field name="page_width">105</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">8</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <!-- Weighing Label Report -->
    <record id="action_report_weighing_label" model="ir.actions.report">
        <field name="name">Weighing Label</field>
        <field name="model">truck.weighing</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_scale_integration_base.report_weighing_label</field>
        <field name="report_file">inventory_scale_integration_base.report_weighing_label</field>
        <field name="binding_model_id" ref="model_truck_weighing"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_label"/>
    </record>

    <!-- Weighing Certificate Report -->
    <record id="action_report_weighing_certificate" model="ir.actions.report">
        <field name="name">Weighing Certificate</field>
        <field name="model">truck.weighing</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_scale_integration_base.report_weighing_certificate</field>
        <field name="report_file">inventory_scale_integration_base.report_weighing_certificate</field>
        <field name="binding_model_id" ref="model_truck_weighing"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Weighing Ticket Report -->
    <record id="action_report_weighing_ticket" model="ir.actions.report">
        <field name="name">Weighing Ticket</field>
        <field name="model">truck.weighing</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_scale_integration_base.report_weighing_ticket</field>
        <field name="report_file">inventory_scale_integration_base.report_weighing_ticket</field>
        <field name="binding_model_id" ref="model_truck_weighing"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_ticket"/>
    </record>

    <!-- Driver Ticket Report (for scanning) -->
    <record id="action_report_driver_ticket" model="ir.actions.report">
        <field name="name">Driver Ticket</field>
        <field name="model">truck.weighing</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_scale_integration_base.report_driver_ticket</field>
        <field name="report_file">inventory_scale_integration_base.report_driver_ticket</field>
        <field name="paperformat_id" ref="paperformat_driver_ticket"/>
    </record>

    <!-- Report Templates -->
    <template id="report_weighing_label">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size: 11px;">
                    <div class="text-center" style="border: 3px solid black; padding: 15px; margin: 10px;">
                        <h3 style="margin: 5px 0; font-size: 16px;"><strong t-esc="'WEIGHING LABEL'"/></h3>
                        <div style="margin: 15px 0;">
                            <div style="font-size: 18px; font-weight: bold;"><span t-esc="o.name"/></div>
                        </div>
                        <div style="margin: 10px 0; font-size: 12px;">
                            <div style="margin: 5px 0;"><strong t-esc="'Truck:'"/> <span t-esc="o.truck_plate"/></div>
                            <div style="margin: 5px 0;"><strong t-esc="'Product:'"/> <span t-esc="o.product_id.name"/></div>
                            <div style="margin: 15px 0; font-size: 20px; font-weight: bold;">
                                <span t-esc="'%s KG' % o.net_weight"/>
                            </div>
                            <div style="margin: 5px 0; font-size: 9px;">
                                <span t-esc="o.weighing_date"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_weighing_certificate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">WEIGHING CERTIFICATE</h2>
                        <div style="margin-top: 30px;">
                            <table class="table table-bordered">
                                <tr>
                                    <td><strong>Reference:</strong></td>
                                    <td><span t-field="o.name"/></td>
                                    <td><strong>Date:</strong></td>
                                    <td><span t-field="o.weighing_date"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Truck Plate:</strong></td>
                                    <td><span t-field="o.truck_plate"/></td>
                                    <td><strong>Driver:</strong></td>
                                    <td><span t-field="o.driver_name"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Partner:</strong></td>
                                    <td><span t-field="o.partner_id"/></td>
                                    <td><strong>Product:</strong></td>
                                    <td><span t-field="o.product_id"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Gross Weight:</strong></td>
                                    <td><span t-field="o.gross_weight"/> KG</td>
                                    <td><strong>Gross Date:</strong></td>
                                    <td><span t-field="o.gross_date"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Tare Weight:</strong></td>
                                    <td><span t-field="o.tare_weight"/> KG</td>
                                    <td><strong>Tare Date:</strong></td>
                                    <td><span t-field="o.tare_date"/></td>
                                </tr>
                                <tr style="background-color: #f0f0f0;">
                                    <td colspan="2"><strong>Net Weight:</strong></td>
                                    <td colspan="2"><strong><span t-field="o.net_weight"/> KG</strong></td>
                                </tr>
                                <tr t-if="o.scale_id">
                                    <td><strong>Scale:</strong></td>
                                    <td colspan="3"><span t-field="o.scale_id"/></td>
                                </tr>
                            </table>
                            <div t-if="o.notes" style="margin-top: 20px;">
                                <strong>Notes:</strong>
                                <p><span t-field="o.notes"/></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_weighing_ticket">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size: 8px; padding: 2px;">
                    <div style="border: 1px solid black; padding: 5px;">
                        <h4 class="text-center" style="margin: 3px 0; font-size: 10px;"><strong>WEIGHING TICKET</strong></h4>
                        <hr style="margin: 3px 0;"/>
                        <div style="margin: 3px 0;">
                            <div style="margin: 2px 0;"><strong>Ticket:</strong> <span t-esc="o.name"/></div>
                            <div style="margin: 2px 0;"><strong>Date:</strong> <span t-esc="o.weighing_date"/></div>
                            <div style="margin: 2px 0;"><strong>Truck:</strong> <span t-esc="o.truck_plate"/></div>
                            <div style="margin: 2px 0;"><strong>Driver:</strong> <span t-esc="o.driver_name"/></div>
                            <div style="margin: 2px 0;"><strong>Partner:</strong> <span t-esc="o.partner_id.name"/></div>
                            <div style="margin: 2px 0;"><strong>Product:</strong> <span t-esc="o.product_id.name"/></div>
                        </div>
                        <hr style="margin: 3px 0;"/>
                        <table style="width: 100%; font-size: 8px; margin: 3px 0;">
                            <tr>
                                <td>Gross:</td>
                                <td style="text-align: right;"><strong><span t-esc="o.gross_weight"/> KG</strong></td>
                            </tr>
                            <tr>
                                <td>Tare:</td>
                                <td style="text-align: right;"><strong><span t-esc="o.tare_weight"/> KG</strong></td>
                            </tr>
                            <tr style="border-top: 1px solid black;">
                                <td><strong>Net:</strong></td>
                                <td style="text-align: right;"><strong style="font-size: 11px;"><span t-esc="o.net_weight"/> KG</strong></td>
                            </tr>
                        </table>
                        <div class="text-center" style="margin-top: 5px; font-size: 6px;">
                            <span>Computer-generated document</span>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Driver Ticket Template (with barcode for scanning) -->
    <template id="report_driver_ticket">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size: 9px; padding: 3px;">
                    <div style="border: 2px solid black; padding: 8px; text-align: center;">
                        <h4 style="margin: 3px 0; font-size: 12px;"><strong t-esc="'DRIVER TICKET'"/></h4>
                        <hr style="border-top: 1px solid black; margin: 5px 0;"/>
                        
                        <div style="margin: 8px 0;">
                            <div style="font-size: 10px; margin: 5px 0;">
                                <strong t-esc="'Weighing #:'"/> <span t-esc="o.name" style="font-size: 12px; font-weight: bold;"/>
                            </div>
                            <div style="font-size: 10px; margin: 5px 0;">
                                <strong t-esc="'Truck:'"/> <span t-esc="o.truck_plate" style="font-size: 12px; font-weight: bold;"/>
                            </div>
                        </div>

                        <!-- Barcode (force LTR for proper rendering) -->
                        <div style="margin: 10px 0; direction: ltr;">
                            <img t-att-src="'/report/barcode/Code128/%s?width=300&amp;height=50&amp;humanreadable=1' % o.name" style="max-width: 100%; height: auto; display: block; margin: 0 auto;" alt="Barcode"/>
                        </div>

                        <div style="margin: 8px 0; font-size: 9px;">
                            <div style="margin: 3px 0;"><strong t-esc="'Date:'"/> <span t-esc="o.gross_date"/></div>
                            <div style="margin: 3px 0;"><strong t-esc="'Gross:'"/> <span t-esc="'%s KG' % o.gross_weight"/></div>
                        </div>

                        <hr style="border-top: 1px solid black; margin: 5px 0;"/>
                        <p style="margin: 3px 0; font-size: 7px;" t-esc="'Present for tare weighing'"/>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
