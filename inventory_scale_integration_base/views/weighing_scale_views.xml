<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Weighing Scale List View -->
    <record id="view_weighing_scale_list" model="ir.ui.view">
        <field name="name">weighing.scale.list</field>
        <field name="model">weighing.scale</field>
        <field name="arch" type="xml">
            <list string="Weighing Scales" decoration-success="connection_status=='connected'" decoration-danger="connection_status=='error'" decoration-muted="not is_enabled" sample="1">
                <field name="name"/>
                <field name="ip_address"/>
                <field name="port"/>
                <field name="is_enabled" widget="boolean_toggle"/>
                <field name="connection_status" widget="badge" decoration-success="connection_status=='connected'" decoration-danger="connection_status=='error'" decoration-warning="connection_status=='disconnected'"/>
                <field name="last_read_weight" string="Last Weight (KG)"/>
                <field name="last_read_date" widget="relative"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Weighing Scale Form View -->
    <record id="view_weighing_scale_form" model="ir.ui.view">
        <field name="name">weighing.scale.form</field>
        <field name="model">weighing.scale</field>
        <field name="arch" type="xml">
            <form string="Weighing Scale">
                <header>
                    <button name="action_test_connection" string="Test Connection" type="object" class="oe_highlight" icon="fa-plug" invisible="not is_enabled"/>
                    <button name="action_enable" string="Enable Scale" type="object" class="btn-success" icon="fa-power-off" invisible="is_enabled"/>
                    <button name="action_disable" string="Disable Scale" type="object" class="btn-warning" icon="fa-ban" invisible="not is_enabled"/>
                </header>
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_weighing_records" type="object" class="oe_stat_button" icon="fa-truck">
                        <field name="weighing_count" widget="statinfo" string="Weighing Records"/>
                    </button>
                </div>
                <sheet>
                    <widget name="web_ribbon" title="Disabled" bg_color="text-bg-danger" invisible="is_enabled"/>
                    <widget name="web_ribbon" title="Connected" bg_color="text-bg-success" invisible="connection_status != 'connected'"/>
                    <widget name="web_ribbon" title="Error" bg_color="text-bg-warning" invisible="connection_status != 'error'"/>
                    
                    <div class="oe_title">
                        <label for="name" string="Scale Name"/>
                        <h1><field name="name" placeholder="e.g. Main Warehouse Scale"/></h1>
                    </div>
                    
                    <group>
                        <group string="Connection Settings">
                            <field name="ip_address" placeholder="192.168.1.100"/>
                            <field name="port"/>
                            <field name="timeout" widget="integer"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Status">
                            <field name="is_enabled" widget="boolean_toggle"/>
                            <field name="connection_status" widget="badge" decoration-success="connection_status=='connected'" decoration-danger="connection_status=='error'" decoration-warning="connection_status=='disconnected'"/>
                            <field name="last_check_date" widget="relative"/>
                        </group>
                    </group>
                    
                    <group string="Last Reading">
                        <group>
                            <label for="last_read_weight" string="Weight"/>
                            <div class="o_row">
                                <field name="last_read_weight" class="oe_inline" style="font-size: 20px; font-weight: bold; color: #00aa00;"/>
                                <span style="font-size: 16px; margin-left: 5px;">KG</span>
                            </div>
                            <field name="last_read_date" widget="datetime"/>
                        </group>
                        <group>
                            <field name="error_message" readonly="1" invisible="not error_message"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Assigned Users" name="users">
                            <field name="user_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add any additional information about this scale..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Weighing Scale Search View -->
    <record id="view_weighing_scale_search" model="ir.ui.view">
        <field name="name">weighing.scale.search</field>
        <field name="model">weighing.scale</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="ip_address"/>
                <filter string="Enabled" name="enabled" domain="[('is_enabled', '=', True)]"/>
                <filter string="Disabled" name="disabled" domain="[('is_enabled', '=', False)]"/>
                <separator/>
                <filter string="Connected" name="connected" domain="[('connection_status', '=', 'connected')]"/>
                <filter string="Error" name="error" domain="[('connection_status', '=', 'error')]"/>
            </search>
        </field>
    </record>

    <!-- Weighing Scale Action -->
    <record id="action_weighing_scale" model="ir.actions.act_window">
        <field name="name">Weighing Scales</field>
        <field name="res_model">weighing.scale</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_enabled': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your first weighing scale
            </p>
            <p>
                Set up IP addresses, ports, and monitor connection status in real-time.
            </p>
        </field>
    </record>

    
</odoo>
