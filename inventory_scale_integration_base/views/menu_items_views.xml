<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Actions for base module -->

    <record id="action_truck_weighing_in_progress" model="ir.actions.act_window">
        <field name="name">In Progress Weighing</field>
        <field name="res_model">truck.weighing</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', 'in', ['draft', 'gross', 'tare'])]</field>
        <field name="context">{}</field>
    </record>

    <record id="action_truck_weighing_all" model="ir.actions.act_window">
        <field name="name">All Weighing Records</field>
        <field name="res_model">truck.weighing</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
    </record>

    <record id="action_truck_weighing_overview" model="ir.actions.act_window">
        <field name="name">Weighing Overview</field>
        <field name="res_model">truck.weighing</field>
        <field name="view_mode">graph,pivot,kanban,list,form</field>
        <field name="context">{}</field>
    </record>

    <record id="action_truck_fleet" model="ir.actions.act_window">
        <field name="name">Truck Fleet</field>
        <field name="res_model">truck.fleet</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <record id="action_truck_type" model="ir.actions.act_window">
        <field name="name">Truck Types</field>
        <field name="res_model">truck.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_weighing_scale" model="ir.actions.act_window">
        <field name="name">Weighing Scales</field>
        <field name="res_model">weighing.scale</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_enabled': 1}</field>
    </record>

    <record id="action_weighable_products" model="ir.actions.act_window">
        <field name="name">Weighable Products</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_weighable', '=', True)]</field>
        <field name="context">{'default_is_weighable': True}</field>
    </record>

    <record id="action_weighing_overview_dashboard" model="ir.actions.client">
        <field name="name">Weighing Overview</field>
        <field name="tag">weighing_overview_dashboard</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_truck_weighing_root" name="Weighbridge" sequence="20" web_icon="inventory_scale_integration_base,static/description/icon.svg"/>
    
    <menuitem id="menu_weighing_overview" name="Overview" parent="menu_truck_weighing_root" action="action_weighing_overview_dashboard" sequence="0"/>
    
    <menuitem id="menu_truck_weighing_operations" name="Operations" parent="menu_truck_weighing_root" sequence="1"/>

    <menuitem id="menu_truck_weighing_in_progress" name="In Progress" parent="menu_truck_weighing_operations" action="action_truck_weighing_in_progress" sequence="5"/>
    <menuitem id="menu_truck_weighing_all" name="All Records" parent="menu_truck_weighing_operations" action="action_truck_weighing_all" sequence="6"/>
    <menuitem id="menu_truck_fleet" name="Truck Fleet" parent="menu_truck_weighing_root" action="action_truck_fleet" sequence="5"/>

    <menuitem id="menu_truck_weighing_reports" name="Reports" parent="menu_truck_weighing_root" sequence="8"/>
    <menuitem id="menu_truck_weighing_overview" name="Weighing Analysis" parent="menu_truck_weighing_reports" action="action_truck_weighing_overview" sequence="1"/>

    <menuitem id="menu_truck_Configuration_root" name="Configuration" parent="menu_truck_weighing_root" sequence="10"/>
    <menuitem id="menu_truck_type" name="Truck Types" parent="menu_truck_Configuration_root" action="action_truck_type" sequence="1"/>
    <menuitem id="menu_truck_weighing_scale_setting" name="Weighing Scales" parent="menu_truck_Configuration_root" action="action_weighing_scale" sequence="2"/>
    <menuitem id="menu_weighable_products" name="Weighable Products" parent="menu_truck_Configuration_root" action="action_weighable_products" sequence="3"/>


    


</odoo>