<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_weighable" model="ir.ui.view">
        <field name="name">product.template.form.weighable</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="is_weighable"/>
            </field>
        </field>
    </record>

    <record id="action_weighable_products" model="ir.actions.act_window">
        <field name="name">Weighable Products</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_weighable', '=', True)]</field>
        <field name="context">{'default_is_weighable': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure weighable products!
            </p>
            <p>
                Mark products as weighable to include them in weighbridge operations.
                Only weighable products will appear in POs and receipts for weighing.
            </p>
        </field>
    </record>
</odoo>
