<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="seq_truck_weighing" model="ir.sequence">
        <field name="name">Truck Weighing Reference</field>
        <field name="code">truck.weighing.sequence</field>
        <field name="prefix">WGT</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="truck_weighing_view_form" model="ir.ui.view">
        <field name="name">truck.weighing.view.form</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <form string="Truck Weighing">
                <header>
                    <button name="action_fetch_live_weight" string="Fetch Live Weight" type="object" class="btn-primary"/>
                    <button name="action_set_gross_from_live" string="Set Gross Weight" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_set_tare_from_live" string="Set Tare Weight" type="object"
                            invisible="state != 'gross'" class="oe_highlight"/>
                    <button name="action_mark_done" string="Mark Done" type="object"
                            invisible="state != 'tare'" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,gross,tare,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Truck Information">
                            <field name="truck_id"/>
                            <field name="truck_plate" invisible="1"/>
                            <field name="driver_name"/>
                            <field name="weighing_date"/>
                        </group>
                        <group string="Scale Configuration">
                            <field name="user_scale_ids" invisible="1"/>
                            <field name="scale_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Partner &amp; Operation">
                            <field name="partner_id"/>
                            <field name="operation_type"/>
                            <field name="product_id" domain="[('is_weighable', '=', True)]"/>
                        </group>
                    </group>
                    <separator string="Weight Measurements (KG)"/>
                    <group>
                        <group>
                            <label for="live_weight" string="Live Weight (KG)"/>
                            <div>
                                <field name="live_weight" class="oe_inline" style="font-size: 24px; font-weight: bold; color: #0066cc;"/>
                            </div>
                            <field name="gross_weight" readonly="1"/>
                            <field name="tare_weight" readonly="1"/>
                        </group>
                        <group>
                            <label for="net_weight" string="Net Weight (KG)"/>
                            <div>
                                <field name="net_weight" readonly="1" class="oe_inline" style="font-size: 24px; font-weight: bold; color: #00aa00;"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="truck_weighing_view_list" model="ir.ui.view">
        <field name="name">truck.weighing.view.list</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'cancel'" decoration-success="state == 'done'" sample="1">
                <field name="name"/>
                <field name="weighing_date" widget="datetime"/>
                <field name="truck_plate" string="Plate #"/>
                <field name="driver_name" optional="hide"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="gross_weight" optional="show"/>
                <field name="tare_weight" optional="show"/>
                <field name="net_weight" sum="Total Net Weight" decoration-bf="1"/>
                <field name="scale_id" optional="hide"/>
                <field name="state" decoration-success="state == 'done'" decoration-info="state == 'gross'" decoration-warning="state == 'tare'" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="truck_weighing_view_search" model="ir.ui.view">
        <field name="name">truck.weighing.view.search</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <search string="Truck Weighing Records">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('truck_plate', 'ilike', self)]" string="Reference/Plate"/>
                <field name="truck_plate" filter_domain="[('truck_plate', 'ilike', self)]"/>
                <field name="driver_name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="scale_id"/>
                <filter string="In Progress" name="in_progress" domain="[('state', 'in', ['draft', 'gross', 'tare'])]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Gross Captured" name="gross" domain="[('state', '=', 'gross')]"/>
                <filter string="Tare Captured" name="tare" domain="[('state', '=', 'tare')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <field name="state"/>
                <group>
                    <filter string="Status" name="group_state" domain="" context="{'group_by':'state'}"/>
                    <filter string="Partner" name="group_partner" domain="" context="{'group_by':'partner_id'}"/>
                    <filter string="Product" name="group_product" domain="" context="{'group_by':'product_id'}"/>
                    <filter string="Scale" name="group_scale" domain="" context="{'group_by':'scale_id'}"/>
                    <filter string="Truck" name="group_truck" domain="" context="{'group_by':'truck_id'}"/>
                    <filter string="Date" name="group_date" domain="" context="{'group_by':'weighing_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_truck_weighing" model="ir.actions.act_window">
        <field name="name">Weighing Records</field>
        <field name="res_model">truck.weighing</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first weighing record
            </p>
            <p>
                Track truck weights with real-time scale integration.
            </p>
        </field>
    </record>
</odoo>
