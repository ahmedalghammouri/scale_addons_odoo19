<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="seq_truck_weighing" model="ir.sequence">
        <field name="name">Truck Weighing Reference</field>
        <field name="code">truck.weighing.sequence</field>
        <field name="prefix">WGT</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="truck_weighing_view_form" model="ir.ui.view">
        <field name="name">truck.weighing.view.form</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <form string="Truck Weighing">
                <header>
                    <button name="action_fetch_live_weight" string="Fetch Live Weight" type="object" class="btn-primary"/>
                    <!-- Incoming: First = Full truck (Gross), Outgoing: First = Empty truck (Tare) -->
                    <button name="action_set_first_weight" string="Weigh First" type="object"
                            invisible="state != 'draft'" class="oe_highlight"
                            help="Incoming: Weigh full truck | Outgoing: Weigh empty truck"/>
                    <button name="action_print_driver_ticket" string="Print Driver Ticket" type="object"
                            invisible="state != 'first'" class="btn-warning"/>
                    <!-- Incoming: Second = Empty truck (Tare), Outgoing: Second = Full truck (Gross) -->
                    <button name="action_set_second_weight" string="Weigh Second" type="object"
                            invisible="state != 'first'" class="oe_highlight"
                            help="Incoming: Weigh empty truck | Outgoing: Weigh full truck"/>
                    <button name="action_mark_done" string="Mark Done" type="object"
                            invisible="state != 'second'" class="oe_highlight"/>
                    <button name="action_print_certificate" string="Print Certificate" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,first,second,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <field name="barcode" invisible="1"/>
                    </group>
                    <group>
                        <group string="Truck Information">
                            <field name="truck_id"/>
                            <field name="truck_plate" invisible="1"/>
                            <field name="driver_name"/>
                            <field name="weighing_date"/>
                        </group>
                        <group string="Scale Configuration">
                            <field name="user_scale_ids" invisible="1"/>
                            <field name="scale_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group name="partner_operation" string="Partner &amp; Operation">
                        <group>
                            <field name="partner_id"/>
                            <field name="operation_type"/>
                        </group>
                        <group>
                            <field name="product_id" domain="[('is_weighable', '=', True)]"/>
                        </group>
                    </group>
                    <separator string="Weight Measurements (KG)"/>
                    <group>
                        <group>
                            <label for="live_weight" string="Live Weight (KG)"/>
                            <div>
                                <field name="live_weight" class="oe_inline" style="font-size: 24px; font-weight: bold; color: #0066cc;"/>
                            </div>
                            <field name="gross_weight" readonly="1"/>
                            <field name="tare_weight" readonly="1"/>
                        </group>
                        <group>
                            <label for="net_weight" string="Net Weight (KG)"/>
                            <div>
                                <field name="net_weight" readonly="1" class="oe_inline" style="font-size: 24px; font-weight: bold; color: #00aa00;"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="truck_weighing_view_kanban" model="ir.ui.view">
        <field name="name">truck.weighing.view.kanban</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="name"/>
                <field name="truck_plate"/>
                <field name="driver_name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="operation_type"/>
                <field name="gross_weight"/>
                <field name="tare_weight"/>
                <field name="net_weight"/>
                <field name="weighing_date"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><t t-out="record.name.value"/></strong>
                                    <div class="text-muted small"><i class="fa fa-truck" title="Truck"/> <t t-out="record.truck_plate.value"/></div>
                                </div>
                                <span class="badge float-end" t-att-class="{'bg-success text-white': record.state.raw_value == 'done', 'bg-info text-white': record.state.raw_value == 'first', 'bg-warning text-dark': record.state.raw_value == 'second', 'bg-secondary text-white': record.state.raw_value == 'draft', 'bg-dark text-white': record.state.raw_value == 'cancel'}">
                                    <t t-out="record.state.value"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="mb-2" t-if="record.operation_type.raw_value">
                                    <span class="badge" t-att-class="{'bg-primary text-white': record.operation_type.raw_value == 'incoming', 'bg-warning text-dark': record.operation_type.raw_value == 'outgoing'}">
                                        <i t-att-class="'fa ' + (record.operation_type.raw_value == 'incoming' ? 'fa-arrow-down' : 'fa-arrow-up')" title="Operation"/> <t t-out="record.operation_type.value"/>
                                    </span>
                                </div>
                                <div class="mb-1"><i class="fa fa-user text-muted" title="Driver"/> <t t-out="record.driver_name.value"/></div>
                                <div class="mb-1"><i class="fa fa-building text-info" title="Partner"/> <t t-out="record.partner_id.value"/></div>
                                <div class="mb-2"><i class="fa fa-cube text-success" title="Product"/> <t t-out="record.product_id.value"/></div>
                                <div class="p-3 text-center border rounded">
                                    <div class="h3 mb-0 fw-bold" t-att-class="{'text-success': record.state.raw_value == 'done', 'text-info': record.state.raw_value == 'first', 'text-warning': record.state.raw_value == 'second'}">
                                        <t t-out="record.net_weight.value"/> KG
                                    </div>
                                    <small class="text-muted">Net Weight</small>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2 pt-2 border-top">
                                <div class="text-muted small"><i class="fa fa-clock-o" title="Date"/> <t t-out="record.weighing_date.value"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="truck_weighing_view_list" model="ir.ui.view">
        <field name="name">truck.weighing.view.list</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'cancel'" decoration-success="state == 'done'" decoration-info="state == 'first'" decoration-warning="state == 'second'" sample="1" multi_edit="1">
                <field name="name" decoration-bf="1"/>
                <field name="weighing_date" widget="datetime"/>
                <field name="truck_plate" string="Plate #" decoration-bf="1"/>
                <field name="driver_name" optional="hide"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="operation_type" optional="show" widget="badge" decoration-primary="operation_type == 'incoming'" decoration-info="operation_type == 'outgoing'"/>
                <field name="gross_weight" optional="show" sum="Total Gross" widget="float" decoration-bf="gross_weight &gt; 0"/>
                <field name="tare_weight" optional="show" sum="Total Tare" widget="float" decoration-bf="tare_weight &gt; 0"/>
                <field name="net_weight" sum="Total Net Weight" widget="float" decoration-bf="1" decoration-success="net_weight &gt; 0"/>
                <field name="scale_id" optional="hide"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'first'" decoration-warning="state == 'second'"/>
            </list>
        </field>
    </record>

    <record id="truck_weighing_view_graph" model="ir.ui.view">
        <field name="name">truck.weighing.view.graph</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <graph string="Weighing Analysis" type="bar" sample="1" stacked="0">
                <field name="weighing_date" interval="day"/>
                <field name="net_weight" type="measure"/>
                <field name="gross_weight" type="measure"/>
                <field name="tare_weight" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="truck_weighing_view_pivot" model="ir.ui.view">
        <field name="name">truck.weighing.view.pivot</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <pivot string="Weighing Pivot" sample="1" display_quantity="1">
                <field name="weighing_date" interval="month" type="row"/>
                <field name="product_id" type="row"/>
                <field name="partner_id" type="col"/>
                <field name="net_weight" type="measure"/>
                <field name="gross_weight" type="measure"/>
                <field name="tare_weight" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="truck_weighing_view_search" model="ir.ui.view">
        <field name="name">truck.weighing.view.search</field>
        <field name="model">truck.weighing</field>
        <field name="arch" type="xml">
            <search string="Truck Weighing Records">
                <field name="name" filter_domain="['|', '|', ('name', 'ilike', self), ('truck_plate', 'ilike', self), ('barcode', 'ilike', self)]" string="Reference/Plate/Barcode"/>
                <field name="barcode"/>
                <field name="truck_plate"/>
                <field name="driver_name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="scale_id"/>
                <filter string="In Progress" name="in_progress" domain="[('state', 'in', ['draft', 'first', 'second'])]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="First Weighing" name="first" domain="[('state', '=', 'first')]"/>
                <filter string="Second Weighing" name="second" domain="[('state', '=', 'second')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="High Weight (&gt;10T)" name="high_weight" domain="[('net_weight', '&gt;', 10000)]"/>
                <filter string="Medium Weight (5-10T)" name="medium_weight" domain="[('net_weight', '&gt;=', 5000), ('net_weight', '&lt;=', 10000)]"/>
                <filter string="Low Weight (&lt;5T)" name="low_weight" domain="[('net_weight', '&lt;', 5000)]"/>
                <separator/>
                <field name="state"/>
                <group>
                    <filter string="Status" name="group_state" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Partner" name="group_partner" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Product" name="group_product" domain="[]" context="{'group_by':'product_id'}"/>
                    <filter string="Scale" name="group_scale" domain="[]" context="{'group_by':'scale_id'}"/>
                    <filter string="Truck" name="group_truck" domain="[]" context="{'group_by':'truck_id'}"/>
                    <filter string="Driver" name="group_driver" domain="[]" context="{'group_by':'driver_name'}"/>
                    <filter string="Date" name="group_date" domain="[]" context="{'group_by':'weighing_date:day'}"/>
                    <filter string="Week" name="group_week" domain="[]" context="{'group_by':'weighing_date:week'}"/>
                    <filter string="Month" name="group_month" domain="[]" context="{'group_by':'weighing_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_truck_weighing" model="ir.actions.act_window">
        <field name="name">Weighing Records</field>
        <field name="res_model">truck.weighing</field>
        <field name="view_mode">kanban,list,form,graph,pivot</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first weighing record
            </p>
            <p>
                Track truck weights with real-time scale integration.
            </p>
        </field>
    </record>
</odoo>
