<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="truck_fleet_view_form" model="ir.ui.view">
        <field name="name">truck.fleet.view.form</field>
        <field name="model">truck.fleet</field>
        <field name="arch" type="xml">
            <form string="Truck Fleet">
                <header>
                    <button name="action_view_weighing_records" string="View Weighing Records" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_weighing_records" type="object" class="oe_stat_button" icon="fa-balance-scale">
                            <field name="weighing_count" widget="statinfo" string="Weighings"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="plate_number" string="Plate Number"/>
                        <h1><field name="plate_number" placeholder="e.g. ABC-1234"/></h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="truck_type_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="status" widget="badge" decoration-success="status == 'available'" decoration-info="status == 'in_use'" decoration-warning="status == 'maintenance'" decoration-danger="status == 'out_of_service'"/>
                            <field name="partner_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Truck Specifications">
                            <field name="manufacturer"/>
                            <field name="model"/>
                            <field name="year"/>
                            <field name="vin"/>
                            <field name="color"/>
                        </group>
                    </group>
                    <group>
                        <group string="Weight Specifications">
                            <field name="trailer_count"/>
                            <field name="max_weight_per_trailer"/>
                            <field name="total_max_weight" readonly="1"/>
                            <field name="tare_weight"/>
                        </group>
                        <group string="Location">
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Driver Information">
                            <group>
                                <group>
                                    <field name="driver_name"/>
                                    <field name="driver_phone"/>
                                </group>
                                <group>
                                    <field name="driver_email" widget="email"/>
                                    <field name="driver_license"/>
                                </group>
                            </group>
                        </page>
                        <page string="Registration &amp; Insurance">
                            <group>
                                <group>
                                    <field name="registration_date"/>
                                    <field name="registration_expiry"/>
                                </group>
                                <group>
                                    <field name="insurance_expiry"/>
                                    <field name="last_weighing_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional information about this truck..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="truck_fleet_view_list" model="ir.ui.view">
        <field name="name">truck.fleet.view.list</field>
        <field name="model">truck.fleet</field>
        <field name="arch" type="xml">
            <list>
                <field name="plate_number" decoration-bf="1"/>
                <field name="truck_type_ids" widget="many2many_tags"/>
                <field name="status" widget="badge" decoration-success="status == 'available'" decoration-info="status == 'in_use'" decoration-warning="status == 'maintenance'" decoration-danger="status == 'out_of_service'"/>
                <field name="driver_name"/>
                <field name="partner_id" optional="hide"/>
                <field name="manufacturer" optional="hide"/>
                <field name="model" optional="hide"/>
                <field name="city" optional="hide"/>
                <field name="trailer_count"/>
                <field name="total_max_weight"/>
                <field name="tare_weight" optional="hide"/>
                <field name="weighing_count"/>
                <field name="last_weighing_date" optional="show"/>
                <field name="registration_expiry" optional="hide"/>
                <field name="insurance_expiry" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="truck_fleet_view_search" model="ir.ui.view">
        <field name="name">truck.fleet.view.search</field>
        <field name="model">truck.fleet</field>
        <field name="arch" type="xml">
            <search string="Truck Fleet">
                <field name="plate_number"/>
                <field name="driver_name"/>
                <field name="truck_type_ids"/>
                <field name="partner_id"/>
                <field name="city"/>
                <field name="manufacturer"/>
                <field name="model"/>
                <filter string="Available" name="available" domain="[('status', '=', 'available')]"/>
                <filter string="In Use" name="in_use" domain="[('status', '=', 'in_use')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by':'status'}"/>
                    <filter string="Owner/Company" name="group_partner" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="City" name="group_city" domain="[]" context="{'group_by':'city'}"/>
                    <filter string="Truck Type" name="group_type" domain="[]" context="{'group_by':'truck_type_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="truck_type_view_form" model="ir.ui.view">
        <field name="name">truck.type.view.form</field>
        <field name="model">truck.type</field>
        <field name="arch" type="xml">
            <form string="Truck Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="truck_type_view_list" model="ir.ui.view">
        <field name="name">truck.type.view.list</field>
        <field name="model">truck.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <record id="action_truck_fleet" model="ir.actions.act_window">
        <field name="name">Truck Fleet</field>
        <field name="res_model">truck.fleet</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <record id="action_truck_type" model="ir.actions.act_window">
        <field name="name">Truck Types</field>
        <field name="res_model">truck.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
