<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="inventory_scale_integration.WeighingDashboardTemplate" owl="1">
        <div class="o_weighing_dashboard">
            <div class="container-fluid" t-if="!state.loading">
                <div class="row mb-4">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <div>
                            <h2><i class="fa fa-tachometer-alt mr-3"/>Weighing Operations Overview</h2>
                            <p class="text-muted m-2">Real-time monitoring of your weighbridge operations</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="text-muted mr-3">Real-time monitoring dashboard</span>
                            <button class="btn btn-primary btn-sm" t-on-click="refreshData">
                                <i class="fa fa-sync-alt mr-1"/>Refresh
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Operations Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="section-header mb-3">
                            <h4 class="text-primary"><i class="fa fa-exchange-alt m-2"/>Operations Overview</h4>
                            <p class="text-muted mb-0">Purchase and sales weighing operations</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card border-primary h-100 shadow-sm">
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <h5 class="m-2"><i class="fa fa-inbox m-2"/>Receipts to Weigh</h5>
                                <span class="badge badge-light" t-esc="state.data.receipts_to_weigh?.count || 0"/>
                            </div>
                            <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                                <i class="fa fa-inbox" style="font-size: 4rem;"/>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <h4 class="text-primary" style="cursor: pointer;" t-esc="state.data.receipts_to_weigh?.count || 0" t-on-click="() => this.onCardAction('receipts_to_weigh')"/>
                                        <small class="text-muted">Total Receipts</small>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-danger" style="cursor: pointer;" t-esc="state.data.receipts_to_weigh?.urgent_count || 0" t-on-click="() => this.onCardAction('receipts_urgent')"/>
                                        <small class="text-muted">Urgent</small>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row text-center">
                                    <div class="col-6">
                                        <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.receipts_to_weigh?.total_qty || 0)" t-on-click="() => this.onCardAction('receipts_to_weigh')"/>
                                        <br/><small class="text-muted">Total Qty</small>
                                    </div>
                                    <div class="col-6">
                                        <strong style="cursor: pointer;" t-esc="state.data.receipts_to_weigh?.partners || 0" t-on-click="() => this.onCardAction('receipts_by_vendor')"/>
                                        <br/><small class="text-muted">Vendors</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100">
                                    <button class="btn btn-primary btn-sm" t-on-click="() => this.onCardAction('receipts_to_weigh')">
                                        <i class="fa fa-eye"/> View All
                                    </button>
                                    <button class="btn btn-outline-primary btn-sm" t-on-click="() => this.onCardAction('new_weighing_receipt')">
                                        <i class="fa fa-plus"/> New
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card border-warning h-100 shadow-sm">
                            <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                                <h5 class="m-2"><i class="fa fa-truck m-2"/>Deliveries to Weigh</h5>
                                <span class="badge badge-dark" t-esc="state.data.deliveries_to_weigh?.count || 0"/>
                            </div>
                            <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                                <i class="fa fa-truck" style="font-size: 4rem;"/>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <h4 class="text-warning" style="cursor: pointer;" t-esc="state.data.deliveries_to_weigh?.count || 0" t-on-click="() => this.onCardAction('deliveries_to_weigh')"/>
                                        <small class="text-muted">Deliveries</small>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-danger" style="cursor: pointer;" t-esc="state.data.deliveries_to_weigh?.urgent_count || 0" t-on-click="() => this.onCardAction('deliveries_urgent')"/>
                                        <small class="text-muted">Urgent</small>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row text-center">
                                    <div class="col-6">
                                        <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.deliveries_to_weigh?.total_qty || 0)" t-on-click="() => this.onCardAction('deliveries_to_weigh')"/>
                                        <br/><small class="text-muted">Total Qty</small>
                                    </div>
                                    <div class="col-6">
                                        <strong style="cursor: pointer;" t-esc="state.data.deliveries_to_weigh?.partners || 0" t-on-click="() => this.onCardAction('deliveries_by_customer')"/>
                                        <br/><small class="text-muted">Customers</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100">
                                    <button class="btn btn-warning btn-sm" t-on-click="() => this.onCardAction('deliveries_to_weigh')">
                                        <i class="fa fa-eye"/> View All
                                    </button>
                                    <button class="btn btn-outline-warning btn-sm" t-on-click="() => this.onCardAction('new_weighing_delivery')">
                                        <i class="fa fa-plus"/> New
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Weighing Records Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="section-header mb-3">
                            <h4 class="text-secondary"><i class="fa fa-balance-scale m-2"/>Weighing Records</h4>
                            <p class="text-muted mb-0">Current weighing status and historical records</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 mb-4">
                        <div class="card border-secondary h-100 shadow-sm">
                            <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                                <h5 class="m-2"><i class="fa fa-clock-o m-2"/>In Progress</h5>
                                <span class="badge badge-light" t-esc="state.data.in_progress?.count || 0"/>
                            </div>
                            <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                                <i class="fa fa-clock-o" style="font-size: 4rem;"/>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <h5 class="text-secondary" style="cursor: pointer;" t-esc="state.data.in_progress?.draft_count || 0" t-on-click="() => this.onCardAction('weighing_draft')"/>
                                        <small class="text-muted">Draft</small>
                                    </div>
                                    <div class="col-4">
                                        <h5 class="text-primary" style="cursor: pointer;" t-esc="state.data.in_progress?.gross_count || 0" t-on-click="() => this.onCardAction('weighing_gross')"/>
                                        <small class="text-muted">Gross</small>
                                    </div>
                                    <div class="col-4">
                                        <h5 class="text-warning" style="cursor: pointer;" t-esc="state.data.in_progress?.tare_count || 0" t-on-click="() => this.onCardAction('weighing_tare')"/>
                                        <small class="text-muted">Tare</small>
                                    </div>
                                </div>
                                <hr/>
                                <div class="text-center">
                                    <strong style="cursor: pointer;" t-esc="state.data.in_progress?.avg_time || 0" t-on-click="() => this.onCardAction('in_progress')"/> hours
                                    <br/><small class="text-muted">Avg. Processing Time</small>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100">
                                    <button class="btn btn-secondary btn-sm" t-on-click="() => this.onCardAction('in_progress')">
                                        <i class="fa fa-eye"/> View All
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm" t-on-click="() => this.onCardAction('new_weighing')">
                                        <i class="fa fa-plus"/> New
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 mb-4">
                        <div class="card border-dark h-100 shadow-sm">
                            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                                <h5 class="m-2"><i class="fa fa-list m-2"/>All Records</h5>
                                <span class="badge badge-light" t-esc="state.data.all_records?.total_count || 0"/>
                            </div>
                            <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                                <i class="fa fa-list" style="font-size: 4rem;"/>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <h4 class="text-info" style="cursor: pointer;" t-esc="state.data.all_records?.completed_today || 0" t-on-click="() => this.onCardAction('completed_today')"/>
                                        <small class="text-muted">Today</small>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-success" style="cursor: pointer;" t-esc="state.data.all_records?.completed_week || 0" t-on-click="() => this.onCardAction('completed_week')"/>
                                        <small class="text-muted">This Week</small>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row text-center">
                                    <div class="col-6">
                                        <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.all_records?.total_weight_today || 0)" t-on-click="() => this.onCardAction('completed_today')"/>
                                        <br/><small class="text-muted">Today's Weight</small>
                                    </div>
                                    <div class="col-6">
                                        <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.all_records?.avg_weight || 0)" t-on-click="() => this.onCardAction('all_records')"/>
                                        <br/><small class="text-muted">Avg. Weight</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100">
                                    <button class="btn btn-dark btn-sm" t-on-click="() => this.onCardAction('all_records')">
                                        <i class="fa fa-eye"/> View All
                                    </button>
                                    <button class="btn btn-outline-dark btn-sm" t-on-click="() => this.onCardAction('reports')">
                                        <i class="fa fa-chart-bar"/> Reports
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Stock Performance Analytics - Full Row -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card shadow-lg border-0">
                            <div class="card-header bg-gradient-success text-white">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h5 class="mb-1"><i class="fa fa-chart-line m-2"/>Stock Performance Analytics</h5>
                                        <small class="opacity-75">Comprehensive inventory weighing performance and variance analysis</small>
                                    </div>
                                    <div class="col-md-4 text-right">
                                        <div class="d-flex justify-content-end align-items-center">
                                            <span class="badge badge-light m-2" t-esc="state.data.stock_performance?.total_completed || 0"/>
                                            <small>Completed</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <!-- Performance Metrics Row -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-muted mb-3"><i class="fa fa-tachometer mr-1"/>Performance Metrics</h6>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('high_fulfillment')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-success text-white mr-3">
                                                    <i class="fa fa-check-circle"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-success" t-esc="state.data.stock_performance?.high_fulfillment || 0"/>
                                                    <small class="text-muted">High Fulfillment</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('over_delivered')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-info text-white mr-3">
                                                    <i class="fa fa-arrow-up"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-info" t-esc="state.data.stock_performance?.over_delivered || 0"/>
                                                    <small class="text-muted">Over-Delivered</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('exact_match')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-primary text-white mr-3">
                                                    <i class="fa fa-equals"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-primary" t-esc="state.data.stock_performance?.exact_match || 0"/>
                                                    <small class="text-muted">Exact Match</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('under_delivered')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-warning text-white mr-3">
                                                    <i class="fa fa-arrow-down"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-warning" t-esc="state.data.stock_performance?.under_delivered || 0"/>
                                                    <small class="text-muted">Under-Delivered</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('avg_fulfillment')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-success text-white mr-3">
                                                    <i class="fa fa-percentage"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-success" t-esc="(state.data.stock_performance?.avg_fulfillment || 0) + '%'"/>
                                                    <small class="text-muted">Avg Fulfillment</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                        <div class="metric-box bg-light" style="cursor: pointer;" t-on-click="() => this.onCardAction('total_variance')">
                                            <div class="d-flex align-items-center">
                                                <div class="metric-icon bg-secondary text-white mr-3">
                                                    <i class="fa fa-balance-scale"/>
                                                </div>
                                                <div>
                                                    <h4 class="m-2 text-secondary" t-esc="this.formatWeight(state.data.stock_performance?.total_variance || 0)"/>
                                                    <small class="text-muted">Total Variance</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Stock Operations Summary Row -->
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="text-muted mb-3"><i class="fa fa-warehouse mr-1"/>Stock Operations Summary</h6>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="summary-card border-left-primary" style="cursor: pointer;" t-on-click="() => this.onCardAction('total_received')">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5 class="text-primary m-2" t-esc="this.formatWeight(state.data.stock_performance?.total_received || 0)"/>
                                                    <small class="text-muted">Total Received</small>
                                                </div>
                                                <i class="fa fa-inbox text-primary fa-2x opacity-25"/>
                                            </div>
                                            <div class="mt-2">
                                                <small class="text-success"><span t-esc="state.data.stock_performance?.receipts_count || 0"/> receipts completed</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="summary-card border-left-warning" style="cursor: pointer;" t-on-click="() => this.onCardAction('total_delivered')">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5 class="text-warning m-2" t-esc="this.formatWeight(state.data.stock_performance?.total_delivered || 0)"/>
                                                    <small class="text-muted">Total Delivered</small>
                                                </div>
                                                <i class="fa fa-truck text-warning fa-2x opacity-25"/>
                                            </div>
                                            <div class="mt-2">
                                                <small class="text-muted"><span t-esc="state.data.stock_performance?.deliveries_count || 0"/> deliveries completed</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="summary-card border-left-info" style="cursor: pointer;" t-on-click="() => this.onCardAction('top_products')">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5 class="text-info m-2" t-esc="state.data.stock_performance?.products_count || 0"/>
                                                    <small class="text-muted">Products Weighed</small>
                                                </div>
                                                <i class="fa fa-cube text-info fa-2x opacity-25"/>
                                            </div>
                                            <div class="mt-2">
                                                <small class="text-muted">Weighable products processed</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="summary-card border-left-success" style="cursor: pointer;" t-on-click="() => this.onCardAction('accuracy_rate')">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5 class="text-success m-2" t-esc="(state.data.stock_performance?.accuracy_rate || 0) + '%'"/>
                                                    <small class="text-muted">Accuracy Rate</small>
                                                </div>
                                                <i class="fa fa-bullseye text-success fa-2x opacity-25"/>
                                            </div>
                                            <div class="mt-2">
                                                <small class="text-muted">Within Â±5% variance</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions Card -->
                <div class="row mt-4 mb-5">
                    <div class="col-12">
                        <div class="card shadow-sm border-0 quick-actions-card">
                            <div class="card-header bg-gradient-secondary text-white">
                                <div class="row align-items-center">
                                    <div class="col-12">
                                        <h5 class="mb-1"><i class="fa fa-bolt m-2"/>Quick Actions Center</h5>
                                        <small class="opacity-75">Essential operations at your fingertips</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="action-card primary" t-on-click="() => this.onCardAction('new_weighing')">
                                            <div class="action-icon">
                                                <i class="fa fa-plus"/>
                                            </div>
                                            <div class="action-content">
                                                <h6 class="action-title">New Weighing</h6>
                                                <p class="action-description">Start a new weighing process</p>
                                                <div class="action-arrow">
                                                    <i class="fa fa-arrow-right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="action-card info" t-on-click="() => this.onCardAction('truck_fleet')">
                                            <div class="action-icon">
                                                <i class="fa fa-truck"/>
                                            </div>
                                            <div class="action-content">
                                                <h6 class="action-title">Truck Fleet</h6>
                                                <p class="action-description">Manage your truck fleet</p>
                                                <div class="action-arrow">
                                                    <i class="fa fa-arrow-right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="action-card warning" t-on-click="() => this.onCardAction('scale_settings')">
                                            <div class="action-icon">
                                                <i class="fa fa-cog"/>
                                            </div>
                                            <div class="action-content">
                                                <h6 class="action-title">Scale Settings</h6>
                                                <p class="action-description">Configure weighing scales</p>
                                                <div class="action-arrow">
                                                    <i class="fa fa-arrow-right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 mb-3">
                                        <div class="action-card success" t-on-click="() => this.onCardAction('reports')">
                                            <div class="action-icon">
                                                <i class="fa fa-chart-line"/>
                                            </div>
                                            <div class="action-content">
                                                <h6 class="action-title">Reports</h6>
                                                <p class="action-description">View analytics and reports</p>
                                                <div class="action-arrow">
                                                    <i class="fa fa-arrow-right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loading State -->
            <div class="text-center p-5" t-if="state.loading">
                <i class="fa fa-spinner fa-spin fa-3x text-muted"/>
                <p class="mt-3 text-muted">Loading dashboard data...</p>
            </div>
        </div>
    </t>
</templates>