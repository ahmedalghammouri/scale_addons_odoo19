<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="truck_weighing_view_form_stock" model="ir.ui.view">
        <field name="name">truck.weighing.view.form.stock</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_form"/>
        <field name="arch" type="xml">
            <field name="operation_type" position="attributes">
                <attribute name="readonly">picking_id or delivery_id</attribute>
            </field>
            <group name="partner_operation" position="after">
                <group string="Stock Operations">
                    <group>
                        <field name="picking_id" domain="[('partner_id', '=', partner_id), ('picking_type_code', '=', 'incoming'), ('state', 'in', ['draft', 'waiting', 'confirmed', 'assigned']), ('move_ids.product_id.is_weighable', '=', True)]"/>
                        <field name="delivery_id" domain="[('partner_id', '=', partner_id), ('picking_type_code', '=', 'outgoing'), ('state', 'in', ['draft', 'waiting', 'confirmed', 'assigned']), ('move_ids.product_id.is_weighable', '=', True)]"/>
                    </group>
                    <group>
                        <field name="location_dest_id"/>
                    </group>
                </group>
            </group>
            <group name="partner_operation" position="after">
                <group string="Transfer Information" invisible="not picking_id and not delivery_id">
                    <group>
                        <field name="source_document" readonly="1"/>
                        <field name="scheduled_date" readonly="1"/>
                    </group>
                    <group>
                        <label for="demand_qty" string="Demand Quantity"/>
                        <div class="o_row">
                            <field name="demand_qty" class="oe_inline" readonly="1"/> 
                            <field name="product_uom" class="oe_inline" readonly="1" nolabel="1"/>
                        </div>
                    </group>
                </group>
            </group>
            <button name="action_mark_done" position="replace">
                <button name="action_update_inventory" string="Update Inventory" type="object"
                        invisible="state != 'tare'" class="oe_highlight"/>
            </button>
            <xpath expr="//div[@class='oe_title']" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_picking" type="object" class="oe_stat_button" icon="fa-truck"
                            invisible="not picking_id">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Receipt</span>
                        </div>
                    </button>
                    <button name="action_view_delivery" type="object" class="oe_stat_button" icon="fa-truck"
                            invisible="not delivery_id">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Delivery</span>
                        </div>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
