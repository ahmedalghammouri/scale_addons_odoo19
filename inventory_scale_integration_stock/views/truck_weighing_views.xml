<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="truck_weighing_view_form_stock" model="ir.ui.view">
        <field name="name">truck.weighing.view.form.stock</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_form"/>
        <field name="arch" type="xml">
            <field name="operation_type" position="attributes">
                <attribute name="readonly">picking_id or delivery_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="readonly">picking_id or delivery_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            <field name="product_id" position="attributes">
                <attribute name="readonly">picking_id or delivery_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            <group name="partner_operation" position="after">
                <group string="Stock Operations">
                    <group>
                        <field name="picking_id" domain="[('partner_id', '=', partner_id), ('picking_type_code', '=', 'incoming'), ('state', 'in', ['draft', 'waiting', 'confirmed', 'assigned']), ('move_ids.product_id.is_weighable', '=', True)]"/>
                        <field name="delivery_id" domain="[('partner_id', '=', partner_id), ('picking_type_code', '=', 'outgoing'), ('state', 'in', ['draft', 'waiting', 'confirmed', 'assigned']), ('move_ids.product_id.is_weighable', '=', True)]"/>
                    </group>
                    <group>
                        <field name="location_dest_id" readonly="picking_id or delivery_id" force_save="1"/>
                    </group>
                </group>
            </group>
            <group name="partner_operation" position="after">
                <group string="Transfer Information" invisible="not picking_id and not delivery_id">
                    <group>
                        <field name="source_document" readonly="1"/>
                        <field name="scheduled_date" readonly="1"/>
                    </group>
                    <group>
                        <label for="demand_qty" string="Demand Quantity"/>
                        <div class="o_row">
                            <field name="demand_qty" class="oe_inline" readonly="1"/> 
                            <field name="product_uom" class="oe_inline" readonly="1" nolabel="1"/>
                        </div>
                    </group>
                </group>
            </group>
            <field name="notes" position="before">
                <div class="alert alert-info" role="alert" invisible="not picking_id and not delivery_id or state == 'draft'" style="margin-bottom: 10px;">
                    <strong>Visual Indicators:</strong>
                    <ul style="margin-bottom: 0; padding-left: 20px;">
                        <li><strong>Remaining Qty:</strong> <span style="color: #d9534f;">Red</span> if positive (under-delivery), <span style="color: #5cb85c;">Green</span> if zero/negative (fulfilled/over-delivered)</li>
                        <li><strong>Variance:</strong> <span style="color: #5cb85c;">Green</span> if positive/zero (met or exceeded), <span style="color: #f0ad4e;">Orange</span> if negative (short)</li>
                        <li><strong>Variance %:</strong> <span style="color: #5cb85c;">Green</span> if within ±5%, <span style="color: #f0ad4e;">Orange</span> if outside that range</li>
                        <li><strong>Fulfillment %:</strong> <span style="color: #5cb85c;">Green</span> if ≥95%, <span style="color: #f0ad4e;">Orange</span> if 90-95%, <span style="color: #d9534f;">Red</span> if &lt;90%</li>
                    </ul>
                </div>
                <group string="Quantity Analysis" invisible="not picking_id and not delivery_id or state == 'draft'">
                    <group>
                        <label for="remaining_qty" string="Remaining Quantity"/>
                        <div class="o_row">
                            <field name="remaining_qty" class="oe_inline" readonly="1" decoration-danger="remaining_qty &gt; 0" decoration-success="remaining_qty &lt;= 0"/> 
                            <span class="oe_inline">KG</span>
                        </div>
                        <label for="variance_qty" string="Variance"/>
                        <div class="o_row">
                            <field name="variance_qty" class="oe_inline" readonly="1" decoration-success="variance_qty &gt;= 0" decoration-warning="variance_qty &lt; 0"/> 
                            <span class="oe_inline">KG</span>
                        </div>
                    </group>
                    <group>
                        <field name="variance_percent" readonly="1" widget="percentage" decoration-success="variance_percent &gt;= -0.05 and variance_percent &lt;= 0.05" decoration-warning="variance_percent &lt; -0.05 or variance_percent &gt; 0.05"/>
                        <field name="fulfillment_percent" readonly="1" widget="percentage" decoration-success="fulfillment_percent &gt;= 0.95" decoration-warning="fulfillment_percent &lt; 0.95 and fulfillment_percent &gt;= 0.90" decoration-danger="fulfillment_percent &lt; 0.90"/>
                    </group>
                </group>
            </field>
            <button name="action_mark_done" position="replace">
                <button name="action_update_inventory" string="Update Inventory" type="object"
                        invisible="state != 'tare'" class="oe_highlight"/>
            </button>
            <xpath expr="//div[@class='oe_title']" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_picking" type="object" class="oe_stat_button" icon="fa-truck"
                            invisible="not picking_id">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Receipt</span>
                        </div>
                    </button>
                    <button name="action_view_delivery" type="object" class="oe_stat_button" icon="fa-truck"
                            invisible="not delivery_id">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Delivery</span>
                        </div>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

    <record id="truck_weighing_view_kanban_stock" model="ir.ui.view">
        <field name="name">truck.weighing.view.kanban.stock</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="picking_id"/>
                <field name="delivery_id"/>
                <field name="source_document"/>
                <field name="demand_qty"/>
                <field name="variance_qty"/>
            </xpath>
            <xpath expr="//div[@class='mb-2'][last()]" position="after">
                <div t-if="record.picking_id.raw_value or record.delivery_id.raw_value" class="mb-2 p-2 border rounded">
                    <div class="mb-1"><i class="fa fa-file-text-o text-primary" title="Source"/> <strong><t t-out="record.source_document.value"/></strong></div>
                    <div class="row" t-if="record.demand_qty.raw_value &gt; 0">
                        <div class="col-6 small"><span class="text-muted">Demand:</span> <strong><t t-out="record.demand_qty.value"/> KG</strong></div>
                        <div class="col-6 small text-end">
                            <span t-att-class="'badge ' + (record.variance_qty.raw_value &gt;= 0 ? 'badge-success' : 'badge-warning')">
                                <t t-if="record.variance_qty.raw_value &gt;= 0">+</t><t t-out="record.variance_qty.value"/> KG
                            </span>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="truck_weighing_view_list_stock" model="ir.ui.view">
        <field name="name">truck.weighing.view.list.stock</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_list"/>
        <field name="arch" type="xml">
            <field name="operation_type" position="after">
                <field name="picking_id" optional="show" decoration-primary="picking_id"/>
                <field name="delivery_id" optional="show" decoration-info="delivery_id"/>
                <field name="source_document" optional="hide"/>
                <field name="demand_qty" optional="hide" widget="float"/>
                <field name="variance_qty" optional="hide" widget="float" decoration-success="variance_qty &gt;= 0" decoration-warning="variance_qty &lt; 0"/>
                <field name="fulfillment_percent" optional="hide" widget="percentage" decoration-success="fulfillment_percent &gt;= 0.95" decoration-warning="fulfillment_percent &lt; 0.95 and fulfillment_percent &gt;= 0.90" decoration-danger="fulfillment_percent &lt; 0.90"/>
                <field name="location_dest_id" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="truck_weighing_view_graph_stock" model="ir.ui.view">
        <field name="name">truck.weighing.view.graph.stock</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_graph"/>
        <field name="arch" type="xml">
            <field name="weighing_date" position="before">
                <field name="operation_type"/>
            </field>
        </field>
    </record>

    <record id="truck_weighing_view_pivot_stock" model="ir.ui.view">
        <field name="name">truck.weighing.view.pivot.stock</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_pivot"/>
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="operation_type" type="col"/>
            </field>
        </field>
    </record>

    <record id="truck_weighing_view_search_stock" model="ir.ui.view">
        <field name="name">truck.weighing.view.search.stock</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_base.truck_weighing_view_search"/>
        <field name="arch" type="xml">
            <field name="scale_id" position="after">
                <field name="picking_id"/>
                <field name="delivery_id"/>
                <field name="location_dest_id"/>
            </field>
            <filter name="done" position="after">
                <filter string="Incoming" name="incoming" domain="[('operation_type', '=', 'incoming')]"/>
                <filter string="Outgoing" name="outgoing" domain="[('operation_type', '=', 'outgoing')]"/>
                <separator/>
                <filter string="With Receipt" name="with_receipt" domain="[('picking_id', '!=', False)]"/>
                <filter string="With Delivery" name="with_delivery" domain="[('delivery_id', '!=', False)]"/>
            </filter>
            <filter name="group_month" position="after">
                <filter string="Operation Type" name="group_operation" domain="[]" context="{'group_by':'operation_type'}"/>
                <filter string="Receipt" name="group_picking" domain="[]" context="{'group_by':'picking_id'}"/>
                <filter string="Delivery" name="group_delivery" domain="[]" context="{'group_by':'delivery_id'}"/>
                <filter string="Destination Location" name="group_location" domain="[]" context="{'group_by':'location_dest_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
