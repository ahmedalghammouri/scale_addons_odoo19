<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_inherit_weighing" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.weighing</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_weighing_records" type="object" class="oe_stat_button" icon="fa-balance-scale" invisible="not has_weighable_products">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="weighing_count"/></span>
                        <span class="o_stat_text">Weighing</span>
                    </div>
                    <div class="o_field_widget o_stat_info" style="margin-top: 5px;">
                        <span class="o_stat_value" style="font-size: 14px; color: #00aa00;"><field name="total_net_weight_display"/></span>
                        <span class="o_stat_text" style="font-size: 11px;">Total Received</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Actions for Purchase Orders -->
    <record id="action_pos_need_weighing" model="ir.actions.act_window">
        <field name="name">Purchase Orders Need Weighing</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'purchase'), ('order_line.product_id.is_weighable', '=', True)]</field>
        <field name="context">{}</field>
    </record>
</odoo>