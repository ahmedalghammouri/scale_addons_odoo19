<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="truck_weighing_view_form_purchase" model="ir.ui.view">
        <field name="name">truck.weighing.view.form.purchase</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_stock_in.truck_weighing_view_form_stock_in"/>
        <field name="arch" type="xml">
            <field name="delivery_id" position="attributes">
                <attribute name="invisible">operation_type == 'incoming'</attribute>
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="readonly">picking_id or delivery_id or purchase_order_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            <field name="product_id" position="attributes">
                <attribute name="readonly">picking_id or delivery_id or purchase_order_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>
            <field name="operation_type" position="attributes">
                <attribute name="readonly">picking_id or delivery_id or purchase_order_id</attribute>
                <attribute name="force_save">1</attribute>
            </field>

            <group name="partner_operation" position="after">
                <group string="Purchase Order" invisible="operation_type != 'incoming'">
                    <group>
                        <field name="purchase_order_id" domain="[('partner_id', '=', partner_id), ('state', 'in', ['purchase', 'done']), ('order_line.product_id.is_weighable', '=', True)]" options="{'no_create': True}" readonly="picking_id" force_save="1"/>
                    </group>
                    <group>
                        <field name="purchase_line_id" domain="[('order_id', '=', purchase_order_id), ('product_id.is_weighable', '=', True)]" options="{'no_create': True}" invisible="not purchase_order_id" readonly="picking_id or purchase_order_id" force_save="1"/>
                    </group>
                </group>
            </group>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_purchase_order" type="object" class="oe_stat_button" icon="fa-shopping-cart"
                        invisible="not purchase_order_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Purchase Order</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="truck_weighing_view_kanban_purchase" model="ir.ui.view">
        <field name="name">truck.weighing.view.kanban.purchase</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_stock_in.truck_weighing_view_kanban_stock_in"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='variance_qty']" position="after">
                <field name="purchase_order_id"/>
            </xpath>
            <xpath expr="//div[hasclass('mb-2')][last()]" position="after">
                <div t-if="record.purchase_order_id.raw_value" class="mb-2 p-2 border border-primary rounded">
                    <i class="fa fa-shopping-cart text-primary" title="Purchase Order"/> <strong>PO:</strong> <t t-out="record.purchase_order_id.value"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="truck_weighing_view_list_purchase" model="ir.ui.view">
        <field name="name">truck.weighing.view.list.purchase</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_stock_in.truck_weighing_view_list_stock_in"/>
        <field name="arch" type="xml">
            <field name="location_dest_id" position="after">
                <field name="purchase_order_id" optional="show" decoration-primary="purchase_order_id" decoration-bf="1"/>
                <field name="purchase_line_id" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="truck_weighing_view_graph_purchase" model="ir.ui.view">
        <field name="name">truck.weighing.view.graph.purchase</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_stock_in.truck_weighing_view_graph_stock_in"/>
        <field name="arch" type="xml">
            <field name="operation_type" position="after">
                <field name="purchase_order_id"/>
            </field>
        </field>
    </record>

    <record id="truck_weighing_view_pivot_purchase" model="ir.ui.view">
        <field name="name">truck.weighing.view.pivot.purchase</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_stock_in.truck_weighing_view_pivot_stock_in"/>
        <field name="arch" type="xml">
            <field name="operation_type" position="after">
                <field name="purchase_order_id" type="col"/>
            </field>
        </field>
    </record>

    <record id="truck_weighing_view_search_purchase" model="ir.ui.view">
        <field name="name">truck.weighing.view.search.purchase</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_stock_in.truck_weighing_view_search_stock_in"/>
        <field name="arch" type="xml">
            <field name="location_dest_id" position="after">
                <field name="purchase_order_id"/>
                <field name="purchase_line_id"/>
            </field>
            <filter name="with_delivery" position="after">
                <filter string="With Purchase Order" name="with_po" domain="[('purchase_order_id', '!=', False)]"/>
                <filter string="Without Purchase Order" name="without_po" domain="[('purchase_order_id', '=', False), ('operation_type', '=', 'incoming')]"/>
            </filter>
            <filter name="group_location" position="after">
                <filter string="Purchase Order" name="group_po" domain="[]" context="{'group_by':'purchase_order_id'}"/>
                <filter string="Vendor" name="group_vendor" domain="[]" context="{'group_by':'partner_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
