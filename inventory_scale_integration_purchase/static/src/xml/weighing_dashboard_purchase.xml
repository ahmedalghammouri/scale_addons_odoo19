<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="inventory_scale_integration_purchase.POCard" t-inherit="inventory_scale_integration.WeighingDashboardTemplate" t-inherit-mode="extension" owl="1">
        <xpath expr="//h5[contains(text(), 'Receipts to Weigh')]/ancestor::div[hasclass('col-lg-3')]" position="after">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-info h-100 shadow-sm">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="m-2"><i class="fa fa-shopping-cart m-2"/>POs to Weigh</h5>
                        <span class="badge badge-light" t-esc="state.data.pos_to_weigh?.count || 0"/>
                    </div>
                    <div class="position-absolute" style="top: 10px; right: 10px; opacity: 0.1;">
                        <i class="fa fa-shopping-cart" style="font-size: 4rem;"/>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <h4 class="text-info" style="cursor: pointer;" t-esc="state.data.pos_to_weigh?.count || 0" t-on-click="() => this.onCardAction('pos_to_weigh')"/>
                                <small class="text-muted">Purchase Orders</small>
                            </div>
                            <div class="col-6">
                                <h4 class="text-success" style="cursor: pointer;" t-esc="(state.data.pos_to_weigh?.total_amount || 0).toLocaleString()" t-on-click="() => this.onCardAction('pos_by_amount')"/>
                                <small class="text-muted">Total Value</small>
                            </div>
                        </div>
                        <hr/>
                        <div class="row text-center">
                            <div class="col-6">
                                <strong style="cursor: pointer;" t-esc="this.formatWeight(state.data.pos_to_weigh?.pending_qty || 0)" t-on-click="() => this.onCardAction('pos_pending_qty')"/>
                                <br/><small class="text-muted">Pending Qty</small>
                            </div>
                            <div class="col-6">
                                <strong style="cursor: pointer;" t-esc="state.data.pos_to_weigh?.partners || 0" t-on-click="() => this.onCardAction('pos_by_supplier')"/>
                                <br/><small class="text-muted">Suppliers</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100">
                            <button class="btn btn-info btn-sm" t-on-click="() => this.onCardAction('pos_to_weigh')">
                                <i class="fa fa-eye"/> View All
                            </button>
                            <button class="btn btn-outline-info btn-sm" t-on-click="() => this.onCardAction('new_weighing_po')">
                                <i class="fa fa-plus"/> New
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
